            fileInput.closest('.form-group').appendChild(preview);
          }
          
          let img = preview.querySelector('img');
          if (!img) {
            img = document.createElement('img');
            preview.appendChild(img);
          }
          img.src = e.target.result;
        };
        reader.readAsDataURL(e.target.files[0]);
      }
    });
  }
