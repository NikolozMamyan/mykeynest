<style>
:root {
  /* Couleurs principales */
  --color-primary: #059669;
  --color-primary-hover: rgba(16, 185, 129, 0.3);
  --background-gradient: linear-gradient(135deg, #f0fdf4 0%, #ecfdf5 100%);

  /* Couleurs de base */
  --color-white: #ffffff;
  --color-bg-light: #f8fafc;
  --color-bg-hover: #f1f5f9;

  /* Couleurs du texte */
  --color-text-dark: #1e293b;
  --color-text-medium: #475569;
  --color-text-muted: #64748b;
  --color-text-light: #94a3b8;

  /* Bordures */
  --color-border: #e2e8f0;

  /* Couleurs d'alerte / notification */
  --color-danger-start: #ef4444;
  --color-danger-end: #dc2626;
  --color-warning: #f59e0b;
  --color-success: #10b981;

  /* Ombres et effets */
  --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.05);
  --shadow-green: 0 4px 12px var(--color-primary-hover);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);

  /* Divers */
  --blur-background: blur(10px);
  --border-radius: 12px;
  --border-radius-sm: 8px;
}

/* ========== ADMIN DASHBOARD ========== */
.admin-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem;
  background: var(--background-gradient);
  min-height: 100vh;
}

.admin-header {
  background: var(--color-white);
  padding: 2rem;
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-md);
  margin-bottom: 2rem;
}

.admin-header h1 {
  color: var(--color-text-dark);
  font-size: 2rem;
  font-weight: 700;
  margin: 0 0 0.5rem 0;
}

.admin-header p {
  color: var(--color-text-medium);
  margin: 0;
}

/* Flash Messages */
.flash-message {
  padding: 1rem 1.5rem;
  margin-bottom: 1.5rem;
  border-radius: var(--border-radius-sm);
  display: flex;
  align-items: center;
  gap: 0.75rem;
  box-shadow: var(--shadow-sm);
  animation: slideIn 0.3s ease-out;
}

.flash-message.success {
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
  border-left: 4px solid var(--color-success);
  color: #065f46;
}

.flash-message.error {
  background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
  border-left: 4px solid var(--color-danger-start);
  color: #991b1b;
}

.flash-message.warning {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-left: 4px solid var(--color-warning);
  color: #92400e;
}

/* Toolbar */
.admin-toolbar {
  display: flex;
  gap: 1rem;
  margin-bottom: 2rem;
  flex-wrap: wrap;
}

.search-form {
  display: flex;
  gap: 0.75rem;
  flex: 1;
  min-width: 300px;
}

.search-input {
  flex: 1;
  padding: 0.875rem 1.25rem;
  border: 2px solid var(--color-border);
  border-radius: var(--border-radius-sm);
  font-size: 0.938rem;
  color: var(--color-text-dark);
  background: var(--color-white);
  transition: all 0.2s ease;
}

.search-input:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: var(--shadow-green);
}

.btn {
  padding: 0.875rem 1.5rem;
  border-radius: var(--border-radius-sm);
  font-weight: 600;
  font-size: 0.938rem;
  cursor: pointer;
  transition: all 0.2s ease;
  border: none;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  text-decoration: none;
  white-space: nowrap;
}

.btn-primary {
  background: var(--color-primary);
  color: var(--color-white);
  box-shadow: var(--shadow-sm);
}

.btn-primary:hover {
  background: #047857;
  box-shadow: var(--shadow-green);
  transform: translateY(-1px);
}

.btn-secondary {
  background: var(--color-white);
  color: var(--color-text-dark);
  border: 2px solid var(--color-border);
}

.btn-secondary:hover {
  background: var(--color-bg-hover);
  border-color: var(--color-primary);
}

.btn-danger {
  background: linear-gradient(135deg, var(--color-danger-start), var(--color-danger-end));
  color: var(--color-white);
  padding: 0.5rem 1rem;
  font-size: 0.875rem;
}

.btn-danger:hover {
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
}

/* Table */
.articles-table-container {
  background: var(--color-white);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-md);
  overflow: hidden;
}

.articles-table {
  width: 100%;
  border-collapse: collapse;
}

.articles-table thead {
  background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
}

.articles-table th {
  padding: 1rem 1.5rem;
  text-align: left;
  font-weight: 600;
  color: var(--color-text-dark);
  font-size: 0.875rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  border-bottom: 2px solid var(--color-primary);
}

.articles-table td {
  padding: 1.25rem 1.5rem;
  border-bottom: 1px solid var(--color-border);
  color: var(--color-text-medium);
}

.articles-table tbody tr {
  transition: all 0.2s ease;
}

.articles-table tbody tr:hover {
  background: var(--color-bg-light);
}

.articles-table tbody tr:last-child td {
  border-bottom: none;
}

.article-cover {
  width: 80px;
  height: 60px;
  object-fit: cover;
  border-radius: var(--border-radius-sm);
  border: 2px solid var(--color-border);
}

.article-actions {
  display: flex;
  gap: 0.75rem;
  align-items: center;
}

.btn-edit {
  color: var(--color-primary);
  text-decoration: none;
  font-weight: 500;
  padding: 0.5rem 1rem;
  border-radius: var(--border-radius-sm);
  transition: all 0.2s ease;
}

.btn-edit:hover {
  background: var(--color-primary-hover);
}

.published-badge {
  display: inline-block;
  padding: 0.375rem 0.75rem;
  border-radius: 9999px;
  font-size: 0.813rem;
  font-weight: 500;
  background: linear-gradient(135deg, #d1fae5, #a7f3d0);
  color: #065f46;
}

/* ========== FORMULAIRE ARTICLE ========== */
.form-container {
  max-width: 900px;
  margin: 0 auto;
  padding: 2rem;
  background: var(--background-gradient);
  min-height: 100vh;
}

.form-card {
  background: var(--color-white);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-lg);
  overflow: hidden;
}

.form-header {
  background: linear-gradient(135deg, var(--color-primary) 0%, #047857 100%);
  padding: 2rem;
  color: var(--color-white);
}

.form-header h1 {
  margin: 0 0 0.5rem 0;
  font-size: 1.875rem;
  font-weight: 700;
}

.form-header p {
  margin: 0;
  opacity: 0.9;
  font-size: 0.938rem;
}

.form-body {
  padding: 2.5rem;
}

.form-section {
  margin-bottom: 2.5rem;
}

.form-section:last-child {
  margin-bottom: 0;
}

.form-section-title {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  margin-bottom: 1.5rem;
  padding-bottom: 0.75rem;
  border-bottom: 2px solid var(--color-border);
  color: var(--color-text-dark);
  font-size: 1.125rem;
  font-weight: 600;
}

.form-section-icon {
  width: 24px;
  height: 24px;
  color: var(--color-primary);
}

.form-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1.5rem;
}

.form-group {
  margin-bottom: 1.5rem;
}

.form-group-full {
  grid-column: 1 / -1;
}

.form-label {
  display: block;
  margin-bottom: 0.5rem;
  color: var(--color-text-dark);
  font-weight: 500;
  font-size: 0.938rem;
}

.form-label-required::after {
  content: "*";
  color: var(--color-danger-start);
  margin-left: 0.25rem;
}

.form-input,
.form-textarea,
.form-select {
  width: 100%;
  padding: 0.875rem 1.25rem;
  border: 2px solid var(--color-border);
  border-radius: var(--border-radius-sm);
  font-size: 0.938rem;
  color: var(--color-text-dark);
  background: var(--color-white);
  transition: all 0.2s ease;
  font-family: inherit;
}

.form-input:focus,
.form-textarea:focus,
.form-select:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: var(--shadow-green);
}

.form-textarea {
  min-height: 120px;
  resize: vertical;
}

.form-textarea.large {
  min-height: 300px;
}

.form-hint {
  display: block;
  margin-top: 0.5rem;
  color: var(--color-text-muted);
  font-size: 0.813rem;
}

.form-file-upload {
  position: relative;
  display: block;
  padding: 2rem;
  border: 2px dashed var(--color-border);
  border-radius: var(--border-radius-sm);
  text-align: center;
  cursor: pointer;
  transition: all 0.2s ease;
  background: var(--color-bg-light);
}

.form-file-upload:hover {
  border-color: var(--color-primary);
  background: var(--color-primary-hover);
}

.form-file-upload input[type="file"] {
  position: absolute;
  opacity: 0;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  cursor: pointer;
}

.file-upload-icon {
  width: 48px;
  height: 48px;
  margin: 0 auto 0.75rem;
  color: var(--color-primary);
}

.file-upload-text {
  color: var(--color-text-medium);
  font-weight: 500;
}

.file-upload-hint {
  display: block;
  margin-top: 0.5rem;
  color: var(--color-text-muted);
  font-size: 0.813rem;
}

.current-image {
  margin-top: 1rem;
  padding: 1rem;
  background: var(--color-bg-light);
  border-radius: var(--border-radius-sm);
  text-align: center;
}

.current-image img {
  max-width: 100%;
  max-height: 200px;
  border-radius: var(--border-radius-sm);
  box-shadow: var(--shadow-md);
}

.current-image-label {
  display: block;
  margin-bottom: 0.75rem;
  color: var(--color-text-muted);
  font-size: 0.875rem;
  font-weight: 500;
}

/* Checkbox et Switch */
.form-checkbox-group {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1rem;
  background: var(--color-bg-light);
  border-radius: var(--border-radius-sm);
  border: 2px solid var(--color-border);
  transition: all 0.2s ease;
}

.form-checkbox-group:hover {
  border-color: var(--color-primary);
}

.form-checkbox {
  width: 20px;
  height: 20px;
  cursor: pointer;
  accent-color: var(--color-primary);
}

.form-checkbox-label {
  color: var(--color-text-dark);
  font-weight: 500;
  cursor: pointer;
  margin: 0;
}

/* Boutons du formulaire */
.form-actions {
  display: flex;
  gap: 1rem;
  padding: 2rem;
  background: var(--color-bg-light);
  border-top: 1px solid var(--color-border);
}

.btn-submit {
  flex: 1;
  background: linear-gradient(135deg, var(--color-primary) 0%, #047857 100%);
  color: var(--color-white);
  padding: 1rem 2rem;
  font-size: 1rem;
  font-weight: 600;
  border: none;
  border-radius: var(--border-radius-sm);
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: var(--shadow-md);
}

.btn-submit:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-green);
}

.btn-cancel {
  padding: 1rem 2rem;
  background: var(--color-white);
  color: var(--color-text-dark);
  border: 2px solid var(--color-border);
  border-radius: var(--border-radius-sm);
  text-decoration: none;
  font-weight: 500;
  transition: all 0.2s ease;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.btn-cancel:hover {
  background: var(--color-bg-hover);
  border-color: var(--color-text-medium);
}

/* Animations */
@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Responsive */
@media (max-width: 768px) {
  .admin-container,
  .form-container {
    padding: 1rem;
  }

  .form-grid {
    grid-template-columns: 1fr;
  }

  .admin-toolbar {
    flex-direction: column;
  }

  .search-form {
    width: 100%;
  }

  .articles-table-container {
    overflow-x: auto;
  }

  .form-actions {
    flex-direction: column;
  }
}
