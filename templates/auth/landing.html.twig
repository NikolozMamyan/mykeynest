.cta-buttons{display:flex;gap:1rem;justify-content:center;flex-wrap:wrap}

/* === FAQ SECTION === */
.faq-section{padding:6rem 2rem;background:var(--color-white)}
.faq-grid{display:grid;gap:1.5rem;max-width:900px;margin:0 auto}
