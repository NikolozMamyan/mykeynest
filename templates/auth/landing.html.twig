.pricing-card.popular{border-color:var(--color-primary);box-shadow:var(--shadow-green)}
.pricing-price{font-weight:800;font-size:2rem;margin:.5rem 0}
.pricing-features{list-style:none;padding:0;margin:1rem 0}
