{% extends 'base.html.twig' %}

{% block title %}Battle Incoming...{% endblock %}

{% block body %}
<style>
.faceoff-container {
    max-width: 1100px;
    margin: 60px auto;
    text-align: center;
    font-family: 'Press Start 2P', cursive;
    color: #fff;
    position: relative;
    animation: fadeIn 1s ease-in-out;
    padding: 0 20px;
}

.vs-title {
    font-size: 2.4rem;
    color: var(--primary-color);
    margin-bottom: 20px;
    text-shadow: 0 0 6px var(--primary-color);
    animation: flicker 1.2s infinite alternate;
}

.vs-section {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 30px;
    overflow-x: auto;
    padding: 20px 0;
}

.vs-section::-webkit-scrollbar {
    height: 6px;
}

.vs-section::-webkit-scrollbar-thumb {
    background-color: var(--primary-color);
    border-radius: 4px;
}

.character-panel {
    min-width: 250px;
    flex-shrink: 0;
    background: linear-gradient(145deg, #1b1b1b, #2a2a2a);
    padding: 20px;
    border: 4px solid #fff;
    box-shadow: 0 0 10px var(--primary-color);
    border-radius: 12px;
    font-size: 0.75rem;
    text-align: center;
    transition: transform 0.3s ease-in-out;
}

.character-panel:hover {
    transform: scale(1.05);
}

.character-panel img {
    width: 120px;
    height: 120px;
    image-rendering: pixelated;
    margin-bottom: 15px;
    filter: drop-shadow(0 0 5px var(--primary-color));
}

.character-name {
    font-size: 1rem;
    margin-bottom: 5px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: var(--primary-color);
    text-shadow: 1px 1px #000;
}

.character-level {
    font-size: 0.85rem;
    color: #ccc;
}

.vs-flash {
    font-size: 2.2rem;
    min-width: 60px;
    flex-shrink: 0;
    color: #ff4747;
    animation: pulse 1.3s infinite ease-in-out;
    text-shadow: 0 0 10px #ff4747;
}

.start-btn {
    margin-top: 40px;
    padding: 12px 26px;
    background: black;
    border: 4px solid var(--primary-color);
    color: white;
    font-family: 'Press Start 2P', cursive;
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.2s ease;
    box-shadow: 0 0 8px var(--primary-color);
    text-decoration: none;
    display: inline-block;
}

.start-btn:hover {
    background-color: var(--primary-color);
    color: black;
    transform: scale(1.05);
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(40px); }
    to { opacity: 1; transform: translateY(0); }
}

@keyframes pulse {
    0%, 100% {
        transform: scale(1);
        opacity: 1;
    }
    50% {
        transform: scale(1.2);
        opacity: 0.7;
    }
}

@keyframes flicker {
    0% { opacity: 1; }
    50% { opacity: 0.85; }
    100% { opacity: 1; }
}
</style>

<div class="faceoff-container">
    <h1 class="vs-title">ðŸ”¥ {{ char1.name }} VS {{ char2.name }} ðŸ”¥</h1>

    <div class="vs-section">
        <div class="character-panel">
            <img src="{{ asset(char1.hero.image) }}" alt="{{ char1.name }}">
            <div class="character-name">{{ char1.name }}</div>
            <div class="character-level">Lvl {{ char1.level }}</div>
        </div>

        <div class="vs-flash">VS</div>

        <div class="character-panel">
            <img src="{{ asset(char2.hero.image) }}" alt="{{ char2.name }}">
            <div class="character-name">{{ char2.name }}</div>
            <div class="character-level">Lvl {{ char2.level }}</div>
        </div>
    </div>

    <a href="{{ path('battle_init', { id: char1.id }) }}" class="pixel-button btn-start">
        â–¶ Start Battle
    </a>
</div>
{% endblock %}
