 {# Carte formulaire #}
        <div class="credential-card">
            <div class="card-body">
                {{ form_start(form, {'attr': {'data-controller': 'credential-form', 'novalidate': 'novalidate'}}) }}

                <div class="form-group">
    <div class="form-label-wrapper">
        {{ form_label(form.name, 'Nom de l\'identifiant', {'label_attr': {'class': 'form-label'}}) }}
        <span class="help-icon">
            <i class="fas fa-question"></i>
            <span class="help-tooltip">
                Donnez un nom reconnaissable à votre identifiant pour le retrouver facilement (ex: "Mon compte Gmail professionnel")
            </span>
        </span>
    </div>
    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Mon compte Gmail'}}) }}
    <div class="my-error">
    {{ form_errors(form.name) }}
</div>
</div>

<div class="form-group">
    <div class="form-label-wrapper">
        {{ form_label(form.domain, 'Domaine ou URL', {'label_attr': {'class': 'form-label'}}) }}
        <span class="help-icon">
            <i class="fas fa-question"></i>
            <span class="help-tooltip">
                Indiquez le nom de domaine ou l'URL complète du site (ex: "gmail.com" ou "https://mail.google.com")
            </span>
        </span>
    </div>
    {{ form_widget(form.domain, {'attr': {'class': 'form-control', 'placeholder': 'Ex: gmail.com'}}) }}
    <div class="my-error">
    {{ form_errors(form.domain) }}
</div>
</div>

<div class="form-group">
    <div class="form-label-wrapper">
        {{ form_label(form.username, 'Nom d\'utilisateur', {'label_attr': {'class': 'form-label'}}) }}
        <span class="help-icon">
            <i class="fas fa-question"></i>
            <span class="help-tooltip">
                Votre identifiant de connexion : adresse email, nom d'utilisateur ou numéro de compte
            </span>
        </span>
    </div>
    {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Ex: utilisateur@email.com'}}) }}
   <div class="my-error">
    {{ form_errors(form.username) }}
</div>
</div>


<div class="form-group" data-controller="password-strength">
    <div class="form-label-wrapper">
        {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
        <span class="help-icon">
            <i class="fas fa-question"></i>
            <span class="help-tooltip">
                Utilisez au moins 12 caractères avec des majuscules, minuscules, chiffres et symboles pour un mot de passe fort
            </span>
        </span>
    </div>

    <div class="input-group" data-controller="password-toggle">
        {{ form_widget(form.password, {
            'attr': {
                'class': 'form-control',
                'placeholder': 'Entrez un mot de passe sécurisé',
                'data-password-toggle-target': 'input',
                'data-password-strength-target': 'input',
                'data-action': 'input->password-strength#check'
            }
        }) }}
        <button class="btn-outline-secondary" type="button" data-action="click->password-toggle#toggle" aria-label="Afficher/Masquer le mot de passe">
            <i class="fas fa-eye" data-password-toggle-target="icon"></i>
        </button>
    </div>

    <div class="my-error">
    {{ form_errors(form.password) }}
</div>

    <div class="mt-2" data-password-strength-target="container" style="display: none;">
        <div class="progress">
            <div class="progress-bar" role="progressbar" data-password-strength-target="progressBar"></div>
        </div>
        <div class="mt-1 small" data-password-strength-target="feedback"></div>
    </div>
</div>


                {{ form_rest(form) }}

                <div class="form-actions">
                    <a href="{{ path('app_credential') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i>
                        <span>Annuler</span>
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        <span>Enregistrer l'identifiant</span>
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>