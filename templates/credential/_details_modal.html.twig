<div class="modal-backdrop" data-modal-backdrop>
  <div class="modal-card" role="dialog" aria-modal="true" aria-labelledby="modal-title">

    <div class="modal-head">
      <div class="modal-head-left">
        <div class="modal-head-icon">
          <i class="fas fa-sticky-note"></i>
        </div>
        <div>
          <h3 id="modal-title">Notes</h3>
          <p class="modal-subtitle">Ajoutez des informations complémentaires</p>
        </div>
      </div>
      <button type="button" class="modal-close" data-modal-close aria-label="Fermer">
        <i class="fas fa-times"></i>
      </button>
    </div>

    <form class="modal-body" data-details-form
          action="{{ path('credential_details_update', {id: credential.id}) }}"
          method="post">

      <div class="textarea-wrapper">
        <textarea
          id="note-textarea"
          name="details"
          rows="8"
          class="modal-textarea"
          maxlength="2000"
          placeholder="Écrivez vos notes ici… (raccourcis clavier, codes de récupération, instructions, etc.)"
        >{{ credential.details }}</textarea>
        <div class="textarea-footer">
          <span class="textarea-hint">
            <i class="fas fa-keyboard"></i> Ctrl+Enter pour enregistrer
          </span>
          <span class="char-counter">
            <span id="char-count">{{ credential.details|length }}</span>/2000
          </span>
        </div>
      </div>

      <div class="modal-actions">
        <button type="button" class="btn-cancel" data-modal-close>
          <i class="fas fa-times"></i> Annuler
        </button>
        <button type="submit" class="btn-save">
          <i class="fas fa-save"></i> Enregistrer
        </button>
      </div>

    </form>
  </div>
</div>

<style>
  .modal-backdrop {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    z-index: 9999;
    animation: backdropIn 0.2s ease;
  }

  @keyframes backdropIn {
    from { opacity: 0; }
    to   { opacity: 1; }
  }

  .modal-card {
    width: min(580px, 100%);
    background: #fff;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
    animation: modalIn 0.25s ease;
  }

  @keyframes modalIn {
    from { opacity: 0; transform: translateY(16px) scale(0.98); }
    to   { opacity: 1; transform: translateY(0)   scale(1); }
  }

  /* ── Header ── */
  .modal-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 18px 20px;
    border-bottom: 1px solid #f0f0f0;
    background: #fafafa;
  }

  .modal-head-left {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .modal-head-icon {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    background: linear-gradient(135deg, var(--color-primary) 0%, #047857 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 1rem;
    flex-shrink: 0;
  }

  .modal-head h3 {
    margin: 0;
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-text-dark, #111);
  }

  .modal-subtitle {
    margin: 2px 0 0;
    font-size: 0.78rem;
    color: var(--color-text-muted, #888);
  }

  .modal-close {
    background: transparent;
    border: none;
    cursor: pointer;
    width: 34px;
    height: 34px;
    border-radius: 8px;
    color: #999;
    font-size: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s, color 0.2s;
  }

  .modal-close:hover {
    background: #fee2e2;
    color: #dc2626;
  }

  /* ── Body ── */
  .modal-body {
    padding: 20px;
  }

  .textarea-wrapper {
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    overflow: hidden;
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .textarea-wrapper:focus-within {
    border-color: var(--color-primary, #059669);
    box-shadow: 0 0 0 3px rgba(5, 150, 105, 0.12);
  }

  .modal-textarea {
    width: 100%;
    padding: 14px 16px;
    border: none;
    outline: none;
    resize: vertical;
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--color-text-dark, #111);
    font-family: inherit;
    min-height: 160px;
    background: #fff;
    box-sizing: border-box;
  }

  .modal-textarea::placeholder {
    color: #adb5bd;
    font-style: italic;
  }

  .textarea-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 8px 14px;
    background: #f9fafb;
    border-top: 1px solid #f0f0f0;
  }

  .textarea-hint {
    font-size: 0.78rem;
    color: #aaa;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .char-counter {
    font-size: 0.78rem;
    color: #aaa;
    font-variant-numeric: tabular-nums;
    transition: color 0.2s;
  }

  .char-counter.warn  { color: #f59e0b; }
  .char-counter.limit { color: #ef4444; font-weight: 700; }

  /* ── Actions ── */
  .modal-actions {
    display: flex;
    justify-content: flex-end;
    gap: 10px;
    margin-top: 16px;
  }

  .btn-cancel,
  .btn-save {
    display: inline-flex;
    align-items: center;
    gap: 7px;
    padding: 9px 18px;
    border-radius: 10px;
    font-size: 0.9rem;
    font-weight: 600;
    cursor: pointer;
    border: 2px solid transparent;
    transition: all 0.2s ease;
  }

  .btn-cancel {
    background: #f3f4f6;
    color: #555;
    border-color: #e5e7eb;
  }

  .btn-cancel:hover {
    background: #e5e7eb;
    color: #222;
  }

  .btn-save {
    background: linear-gradient(135deg, var(--color-primary, #059669) 0%, #047857 100%);
    color: #fff;
    border-color: transparent;
    box-shadow: 0 2px 8px rgba(5, 150, 105, 0.25);
  }

  .btn-save:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 14px rgba(5, 150, 105, 0.35);
  }

  .btn-save:active {
    transform: translateY(0);
  }
</style>

<script>
  (function () {
    const textarea = document.getElementById('note-textarea');
    const counter  = document.getElementById('char-count');
    const wrapper  = textarea?.closest('.char-counter');

    if (!textarea) return;

    /* Compteur de caractères */
    textarea.addEventListener('input', () => {
      const len = textarea.value.length;
      counter.textContent = len;

      const parent = counter.closest('.char-counter');
      parent.classList.toggle('warn',  len >= 1600 && len < 2000);
      parent.classList.toggle('limit', len >= 2000);
    });

    /* Ctrl+Enter → submit */
    textarea.addEventListener('keydown', (e) => {
      if ((e.ctrlKey || e.metaKey) && e.key === 'Enter') {
        textarea.closest('form')?.requestSubmit();
      }
    });

    /* Focus auto */
    textarea.focus();
    textarea.setSelectionRange(textarea.value.length, textarea.value.length);
  })();
</script>