{# templates/credential/edit.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Modifier {{ credential.name }}{% endblock %}
{% block body %}

<style>
  .content-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    animation: fadeIn 0.5s ease;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .page-header {
    margin-bottom: 2.5rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-medium);
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 1rem;
    transition: color 0.3s ease;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .page-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 0.5rem;
  }

  .page-subtitle {
    color: var(--color-text-muted);
    font-size: 0.95rem;
  }

  .form-card {
    background: var(--color-white);
    border: 2px solid var(--color-border);
    border-radius: 16px;
    padding: 2rem;
    box-shadow: var(--shadow-sm);
    animation: slideUp 0.6s ease;
  }

  @keyframes slideUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    color: var(--color-text-dark);
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
  }

  .form-label i {
    color: var(--color-primary);
  }

  .form-label .required {
    color: var(--color-danger-start);
  }

  .form-input,
  .form-textarea,
  .form-select {
    width: 100%;
    padding: 0.875rem 1rem;
    border: 2px solid var(--color-border);
    border-radius: 12px;
    background: var(--color-white);
    color: var(--color-text-dark);
    font-size: 0.95rem;
    transition: all 0.3s ease;
    font-family: inherit;
  }

  .form-input:focus,
  .form-textarea:focus,
  .form-select:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: var(--shadow-green);
  }

  .form-textarea {
    resize: vertical;
    min-height: 100px;
  }

  .form-help {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-top: 0.375rem;
  }

  .password-input-wrapper {
    position: relative;
  }

  .toggle-password {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: var(--color-text-muted);
    cursor: pointer;
    transition: color 0.3s ease;
    font-size: 1.1rem;
  }

  .toggle-password:hover {
    color: var(--color-primary);
  }

  /* Style pour les checkboxes des équipes */
  .teams-section {
    margin-top: 1rem;
  }

  .team-checkbox-wrapper {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    border: 2px solid var(--color-border);
    border-radius: 8px;
    margin-bottom: 0.5rem;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .team-checkbox-wrapper:hover {
    background: var(--color-bg-hover);
    border-color: var(--color-primary);
  }

  .team-checkbox-wrapper input[type="checkbox"] {
    width: 18px;
    height: 18px;
    cursor: pointer;
    accent-color: var(--color-primary);
  }

  .team-checkbox-wrapper label {
    cursor: pointer;
    margin: 0;
    flex: 1;
    font-weight: 500;
  }

  .form-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .btn-submit {
    flex: 1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    background: linear-gradient(135deg, var(--color-primary) 0%, #047857 100%);
    color: var(--color-white);
    border: none;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: var(--shadow-sm);
  }

  .btn-submit:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-green);
  }

  .btn-cancel {
    flex: 1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    background: var(--color-white);
    color: var(--color-text-medium);
    border: 2px solid var(--color-border);
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .btn-cancel:hover {
    background: var(--color-bg-hover);
    border-color: var(--color-text-medium);
  }

  .form-error {
    color: var(--color-danger-start);
    font-size: 0.85rem;
    margin-top: 0.375rem;
  }

  /* Style pour cacher les labels générés par Symfony */
  form > div > label {
    display: none;
  }

  @media (max-width: 768px) {
    .content-container {
      padding: 1rem;
    }

    .form-card {
      padding: 1.5rem;
    }

    .form-actions {
      flex-direction: column-reverse;
    }
  }
</style>

<div class="content-container">
  <a href="{{ path('credential_show', {'id': credential.id}) }}" class="back-link">
    <i class="fas fa-arrow-left"></i>
    <span>Retour aux détails</span>
  </a>

  <div class="page-header">
    <h1 class="page-title">
      <i class="fas fa-edit"></i> Modifier l'identifiant
    </h1>
    <p class="page-subtitle">Mettez à jour les informations de {{ credential.name }}</p>
  </div>

  <div class="form-card">
    {{ form_start(form) }}
    
    {# Nom #}
    <div class="form-group">
      <label class="form-label" for="{{ form.name.vars.id }}">
        <i class="fas fa-tag"></i>
        <span>Nom du credential</span>
        <span class="required">*</span>
      </label>
      {{ form_widget(form.name, {'attr': {'class': 'form-input', 'placeholder': 'Ex : Gmail, Facebook, etc.'}}) }}
      <div class="form-help">Donnez un nom descriptif pour identifier facilement cet identifiant</div>
      {{ form_errors(form.name) }}
    </div>

    {# Domaine #}
    <div class="form-group">
      <label class="form-label" for="{{ form.domain.vars.id }}">
        <i class="fas fa-globe"></i>
        <span>Domaine</span>
        <span class="required">*</span>
      </label>
      {{ form_widget(form.domain, {'attr': {'class': 'form-input', 'placeholder': 'Ex : facebook.com'}}) }}
      <div class="form-help">Le nom de domaine du service (sans http://)</div>
      {{ form_errors(form.domain) }}
    </div>

    {# Username #}
    <div class="form-group">
      <label class="form-label" for="{{ form.username.vars.id }}">
        <i class="fas fa-user"></i>
        <span>Nom d'utilisateur</span>
        <span class="required">*</span>
      </label>
      {{ form_widget(form.username, {'attr': {'class': 'form-input', 'placeholder': 'Votre identifiant'}}) }}
      <div class="form-help">Adresse email ou nom d'utilisateur pour se connecter</div>
      {{ form_errors(form.username) }}
    </div>

{# Password #}
<div class="form-group">
  <label class="form-label" for="{{ form.password.vars.id }}">
    <i class="fas fa-lock"></i>
    <span>Mot de passe</span>
  </label>
  <div class="password-input-wrapper">
    {{ form_widget(form.password, {
      'attr': {
        'class': 'form-input',
        'id': 'password-input',
        'placeholder': 'Laissez vide pour conserver le mot de passe actuel'
      }
    }) }}
    <button type="button" class="toggle-password" onclick="togglePassword()">
      <i class="fas fa-eye" id="toggle-icon"></i>
    </button>
  </div>
  <div class="form-help">⚠️ Laissez ce champ vide si vous ne souhaitez pas modifier le mot de passe</div>
  {{ form_errors(form.password) }}
</div>

    {# Équipes (si disponible) #}
    {% if form.teams is defined %}
    <div class="form-group">
      <label class="form-label">
        <i class="fas fa-users"></i>
        <span>Partager avec des équipes</span>
      </label>
      <div class="teams-section">
        {% for team in form.teams %}
          <div class="team-checkbox-wrapper">
            {{ form_widget(team) }}
            {{ form_label(team) }}
          </div>
        {% endfor %}
      </div>
      <div class="form-help">Sélectionnez les équipes avec lesquelles partager ce credential (optionnel)</div>
      {{ form_errors(form.teams) }}
    </div>
    {% endif %}

    {# Boutons d'action #}
    <div class="form-actions">
      <a href="{{ path('credential_show', {'id': credential.id}) }}" class="btn-cancel">
        <i class="fas fa-times"></i>
        <span>Annuler</span>
      </a>
      <button type="submit" class="btn-submit">
        <i class="fas fa-save"></i>
        <span>Enregistrer les modifications</span>
      </button>
    </div>

    {{ form_end(form) }}
  </div>
</div>

<script>
function togglePassword() {
  const input = document.getElementById('password-input');
  const icon = document.getElementById('toggle-icon');
  
  if (input.type === 'password') {
    input.type = 'text';
    icon.classList.remove('fa-eye');
    icon.classList.add('fa-eye-slash');
  } else {
    input.type = 'password';
    icon.classList.remove('fa-eye-slash');
    icon.classList.add('fa-eye');
  }
}
</script>

{% endblock %}