{% extends 'base.html.twig' %}

{% block body %}
<div class="import-results-container">
  <div class="results-header">
    <div class="success-icon">
      <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
        <polyline points="22 4 12 14.01 9 11.01"></polyline>
      </svg>
    </div>
    <h1>Import terminé</h1>
    <p class="results-subtitle">Voici le récapitulatif de l'importation</p>
  </div>

  <div class="results-content">
    {# Statistiques #}
    <div class="stats-card">
      <div class="stat-item stat-success">
        <div class="stat-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
        </div>
        <div class="stat-info">
          <span class="stat-value">{{ imported }}</span>
          <span class="stat-label">{{ imported > 1 ? 'identifiants importés' : 'identifiant importé' }}</span>
        </div>
      </div>

      {% set total = results|length %}
      {% set failed = total - imported %}
      
      {% if failed > 0 %}
      <div class="stat-item stat-warning">
        <div class="stat-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="12"></line>
            <line x1="12" y1="16" x2="12.01" y2="16"></line>
          </svg>
        </div>
        <div class="stat-info">
          <span class="stat-value">{{ failed }}</span>
          <span class="stat-label">{{ failed > 1 ? 'lignes ignorées' : 'ligne ignorée' }}</span>
        </div>
      </div>
      {% endif %}
    </div>

    {# Détails ligne par ligne #}
    <div class="details-card">
      <div class="details-header">
        <h2>Détails de l'importation</h2>
        <span class="details-count">{{ results|length }} {{ results|length > 1 ? 'lignes traitées' : 'ligne traitée' }}</span>
      </div>

      <div class="results-list">
        {% for r in results %}
          {% set isSuccess = r starts with '✅' %}
          {% set isWarning = r starts with '⚠️' %}
          {% set isError = r starts with '❌' %}
          
          <div class="result-item {% if isSuccess %}result-success{% elseif isWarning %}result-warning{% else %}result-error{% endif %}">
            <div class="result-icon">
              {% if isSuccess %}
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
              {% elseif isWarning %}
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                  <line x1="12" y1="9" x2="12" y2="13"></line>
                  <line x1="12" y1="17" x2="12.01" y2="17"></line>
                </svg>
              {% else %}
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <line x1="15" y1="9" x2="9" y2="15"></line>
                  <line x1="9" y1="9" x2="15" y2="15"></line>
                </svg>
              {% endif %}
            </div>
            <span class="result-text">{{ r|replace({'✅': '', '⚠️': '', '❌': ''})|trim }}</span>
          </div>
        {% endfor %}
      </div>
    </div>

    {# Actions #}
    <div class="actions-card">
      <a href="{{ path('app_credential') }}" class="btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="19" y1="12" x2="5" y2="12"></line>
          <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Retour à mes identifiants
      </a>
      
      <a href="{{ path('credential_import') }}" class="btn-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
          <polyline points="17 8 12 3 7 8"></polyline>
          <line x1="12" y1="3" x2="12" y2="15"></line>
        </svg>
        Nouvel import
      </a>
    </div>
  </div>
</div>

<style>
.import-results-container {
  max-width: 900px;
  margin: 2rem auto;
  padding: 0 1.5rem;
}

.results-header {
  text-align: center;
  margin-bottom: 3rem;
}

.success-icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 96px;
  height: 96px;
  background: linear-gradient(135deg, rgba(5, 150, 105, 0.1) 0%, rgba(16, 185, 129, 0.1) 100%);
  border-radius: 50%;
  margin-bottom: 1.5rem;
  animation: scaleIn 0.5s ease-out;
}

.success-icon svg {
  color: var(--color-success);
}

@keyframes scaleIn {
  from {
    transform: scale(0);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.results-header h1 {
  color: var(--color-text-dark);
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
}

.results-subtitle {
  color: var(--color-text-medium);
  font-size: 1rem;
}

.results-content {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

/* Stats Card */
.stats-card {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1.5rem;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 1.25rem;
  background: var(--color-white);
  border: 1px solid var(--color-border);
  border-radius: var(--border-radius);
  padding: 1.75rem;
  box-shadow: var(--shadow-sm);
  transition: all 0.3s;
}

.stat-item:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

.stat-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 56px;
  height: 56px;
  border-radius: var(--border-radius-sm);
  flex-shrink: 0;
}

.stat-success .stat-icon {
  background: rgba(16, 185, 129, 0.1);
  color: var(--color-success);
}

.stat-warning .stat-icon {
  background: rgba(245, 158, 11, 0.1);
  color: var(--color-warning);
}

.stat-info {
  display: flex;
  flex-direction: column;
}

.stat-value {
  font-size: 2rem;
  font-weight: 700;
  line-height: 1;
  margin-bottom: 0.5rem;
}

.stat-success .stat-value {
  color: var(--color-success);
}

.stat-warning .stat-value {
  color: var(--color-warning);
}

.stat-label {
  color: var(--color-text-medium);
  font-size: 0.875rem;
  font-weight: 500;
}

/* Details Card */
.details-card {
  background: var(--color-white);
  border: 1px solid var(--color-border);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-sm);
  overflow: hidden;
}

.details-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1.5rem;
  background: var(--color-bg-light);
  border-bottom: 1px solid var(--color-border);
}

.details-header h2 {
  margin: 0;
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--color-text-dark);
}

.details-count {
  color: var(--color-text-muted);
  font-size: 0.875rem;
  font-weight: 500;
}

.results-list {
  max-height: 500px;
  overflow-y: auto;
}

.result-item {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
  padding: 1.25rem 1.5rem;
  border-bottom: 1px solid var(--color-border);
  transition: background 0.2s;
}

.result-item:last-child {
  border-bottom: none;
}

.result-item:hover {
  background: var(--color-bg-light);
}

.result-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  flex-shrink: 0;
}

.result-success .result-icon {
  background: rgba(16, 185, 129, 0.1);
  color: var(--color-success);
}

.result-warning .result-icon {
  background: rgba(245, 158, 11, 0.1);
  color: var(--color-warning);
}

.result-error .result-icon {
  background: rgba(239, 68, 68, 0.1);
  color: var(--color-danger-start);
}

.result-text {
  flex: 1;
  color: var(--color-text-dark);
  font-size: 0.95rem;
  line-height: 1.6;
  padding-top: 0.5rem;
}

/* Actions Card */
.actions-card {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  min-width: 200px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.75rem;
  padding: 1rem 2rem;
  border-radius: var(--border-radius-sm);
  font-size: 1rem;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s;
  box-shadow: var(--shadow-sm);
}

.btn-primary {
  background: var(--color-primary);
  color: var(--color-white);
  border: 2px solid var(--color-primary);
}

.btn-primary:hover {
  background: #047857;
  box-shadow: var(--shadow-green);
  transform: translateY(-2px);
}

.btn-secondary {
  background: var(--color-white);
  color: var(--color-primary);
  border: 2px solid var(--color-primary);
}

.btn-secondary:hover {
  background: var(--color-bg-light);
  transform: translateY(-2px);
}

.btn-primary:active,
.btn-secondary:active {
  transform: translateY(0);
}

/* Scrollbar personnalisée */
.results-list::-webkit-scrollbar {
  width: 8px;
}

.results-list::-webkit-scrollbar-track {
  background: var(--color-bg-light);
}

.results-list::-webkit-scrollbar-thumb {
  background: var(--color-border);
  border-radius: 4px;
}

.results-list::-webkit-scrollbar-thumb:hover {
  background: var(--color-text-light);
}

@media (max-width: 640px) {
  .results-header h1 {
    font-size: 1.5rem;
  }
  
  .stats-card {
    grid-template-columns: 1fr;
  }
  
  .stat-value {
    font-size: 1.75rem;
  }
  
  .actions-card {
    flex-direction: column;
  }
  
  .btn-primary,
  .btn-secondary {
    width: 100%;
    min-width: auto;
  }
  
  .result-item {
    padding: 1rem;
  }
}
</style>
{% endblock %}