{# templates/credential/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Ajouter un identifiant{% endblock %}

{% block body %}
<style>

    
    .container {
        max-width: 900px;
        padding: 2rem 1.5rem;
    }
    
    .breadcrumb-container {
        margin-bottom: 2rem;
    }
    
    .breadcrumb {
        display: flex;
        padding: 0;
        margin: 0;
        list-style: none;
    }
    
    .breadcrumb-item {
        font-size: 0.925rem;
        color: #64748b;
    }
    
    .breadcrumb-item+.breadcrumb-item::before {
        content: "/";
        padding: 0 0.5rem;
        color: #94a3b8;
    }
    

    
    .breadcrumb-item a:hover {
        color: #6366f1;
        text-decoration: underline;
    }
    
    .breadcrumb-item.active {
        color: #334155;
        font-weight: 500;
    }
    
    .form-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        overflow: hidden;
        border: 1px solid #f1f5f9;
    }
    
    .card-header {
        padding: 1.5rem 2rem;
        border-bottom: 1px solid #f1f5f9;
    }
    
    .card-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #1e293b;
        margin: 0;
    }
    
    .card-body {
        padding: 2rem;
    }
    
    .form-group {
        margin-bottom: 1.75rem;
    }
    
    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: #334155;
        font-size: 0.95rem;
    }
    
    .form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        border-radius: 10px;
        border: 1px solid #e2e8f0;
        transition: all 0.2s ease;
        color: #334155;
        background-color: #fff;
    }
    
    .form-control:focus {
        outline: none;
        border-color: #818cf8;
        box-shadow: 0 0 0 3px rgba(129, 140, 248, 0.2);
    }
    
    .form-hint {
        margin-top: 0.5rem;
        font-size: 0.85rem;
        color: #64748b;
    }
    
    .input-group {
        position: relative;
        display: flex;
    }
    
    .input-group .form-control {
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
        flex: 1;
    }
    
    .input-group-btn {
        border: 1px solid #e2e8f0;
        border-left: none;
        padding: 0 1rem;
        border-top-right-radius: 10px;
        border-bottom-right-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8fafc;
        color: #64748b;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .input-group-btn:hover {
        background-color: #f1f5f9;
    }
    
    .password-strength {
        margin-top: 0.75rem;
    }
    
    .progress {
        height: 6px;
        background-color: #f1f5f9;
        border-radius: 3px;
        overflow: hidden;
        margin-bottom: 0.5rem;
    }
    
    .progress-bar {
        height: 100%;
        border-radius: 3px;
        transition: width 0.3s ease;
    }
    
    .password-feedback {
        font-size: 0.85rem;
        display: block;
        margin-top: 0.25rem;
    }
    
    .form-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 2.5rem;
        align-items: center;
    }
    
    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 10px;
        font-weight: 500;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        border: none;
        cursor: pointer;
        font-size: 0.95rem;
    }
    
    .btn-cancel {
        background-color: #f8fafc;
        color: #64748b;
        border: 1px solid #e2e8f0;
    }
    
    .btn-cancel:hover {
        background-color: #f1f5f9;
        color: #334155;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #4f46e5, #818cf8);
        color: white;
        box-shadow: 0 4px 12px rgba(79, 70, 229, 0.25);
    }
    
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(79, 70, 229, 0.3);
    }
    
    .btn-primary:active {
        transform: translateY(0);
    }
    
    .invalid-feedback {
        display: block;
        width: 100%;
        margin-top: 0.5rem;
        font-size: 0.85rem;
        color: #ef4444;
    }
    
    .form-error {
        border-color: #fca5a5;
        background-color: #fef2f2;
    }
    
    .form-error:focus {
        border-color: #ef4444;
        box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.2);
    }
    
    .has-error label {
        color: #ef4444;
    }
    
    @media (max-width: 767px) {
        .form-actions {
            flex-direction: column-reverse;
            gap: 1rem;
        }
        
        .btn {
            width: 100%;
            justify-content: center;
        }
    }
    /* Optionnel - am√©lioration du style */
.progress-bar {
    transition: width 0.3s ease, background-color 0.3s ease;
}

</style>
    <div class="breadcrumb-container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('app_credential') }}">Mes identifiants</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    Ajouter un identifiant
                </li>
            </ol>
        </nav>
    </div>

    <div class="form-card">
        <div class="card-header">
            <h1 class="card-title">Ajouter un nouvel identifiant</h1>
        </div>

        <div class="card-body">
            {{ form_start(form, {'attr': {'data-controller': 'credential-form'}}) }}

            <div class="form-group">
                {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.name) }}
                {% if form.name.vars.help is defined %}
                    <div class="form-hint">{{ form.name.vars.help }}</div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(form.domain, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.domain, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.domain) }}
                {% if form.domain.vars.help is defined %}
                    <div class="form-hint">{{ form.domain.vars.help }}</div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(form.username, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.username) }}
                {% if form.username.vars.help is defined %}
                    <div class="form-hint">{{ form.username.vars.help }}</div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(form.password, null, {'label_attr': {'class': 'form-label'}}) }}

                <div class="input-group" data-controller="password-toggle password-strength">
                    {{ form_widget(form.password, {
                        'attr': {
                            'class': 'form-control',
                            'data-password-toggle-target': 'input',
                            'data-password-strength-target': 'input',
                            'data-action': 'input->password-strength#check'
                        }
                    }) }}
                    <button class="btn btn-outline-secondary" type="button" data-action="click->password-toggle#toggle">
                        <i class="fas fa-eye" data-password-toggle-target="icon"></i>
                    </button>
                </div>

                {{ form_errors(form.password) }}

                <div class="d-none mt-2" data-password-strength-target="container">
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" data-password-strength-target="progressBar"></div>
                    </div>
                    <div class="mt-1 small text-muted" data-password-strength-target="feedback"></div>
                </div>

                {% if form.password.vars.help is defined %}
                    <div class="form-hint">{{ form.password.vars.help }}</div>
                {% endif %}
            </div>

            {{ form_rest(form) }}

            <div class="form-actions mt-4 d-flex justify-content-between">
                <a href="{{ path('app_credential') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Annuler
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Enregistrer
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}