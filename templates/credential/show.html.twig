{# templates/credential/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}{{ credential.name }}{% endblock %}
{% block body %}

<style>
  .content-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
    animation: fadeIn 0.5s ease;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-medium);
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
    transition: color 0.3s ease;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .credential-header {
    background: var(--color-white);
    border: 2px solid var(--color-border);
    border-radius: 16px;
    padding: 2rem;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1.5rem;
    box-shadow: var(--shadow-sm);
    animation: slideUp 0.6s ease;
  }

  @keyframes slideUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .credential-icon {
    width: 80px;
    height: 80px;
    border-radius: 16px;
    background: linear-gradient(135deg, var(--color-primary) 0%, #047857 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-white);
    font-size: 2.5rem;
    font-weight: 700;
    flex-shrink: 0;
    box-shadow: var(--shadow-green);
    position: relative;
    overflow: hidden;
  }

  .credential-icon img {
    width: 48px;
    height: 48px;
    object-fit: contain;
    position: absolute;
  }

  .credential-icon .fallback-letter {
    display: none;
  }

  .credential-title-section {
    flex: 1;
  }

  .credential-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin: 0 0 0.5rem 0;
  }

  .credential-domain {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    font-size: 1rem;
  }

  .credential-domain a {
    color: var(--color-primary);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    transition: all 0.3s ease;
  }

  .credential-domain a:hover {
    text-decoration: underline;
    color: #047857;
  }

  .header-actions {
    display: flex;
    gap: 0.75rem;
  }

  .action-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: var(--color-white);
    border: 2px solid var(--color-border);
    border-radius: 12px;
    color: var(--color-text-medium);
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    font-size: 1.1rem;
  }

  .action-btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-sm);
  }

  .action-btn.edit:hover {
    background: var(--color-warning);
    border-color: var(--color-warning);
    color: var(--color-white);
  }

  .action-btn.delete:hover {
    background: var(--color-danger-start);
    border-color: var(--color-danger-start);
    color: var(--color-white);
  }

  .credential-details {
    background: var(--color-white);
    border: 2px solid var(--color-border);
    border-radius: 16px;
    padding: 2rem;
    box-shadow: var(--shadow-sm);
    animation: slideUp 0.7s ease;
  }

  .detail-section {
    margin-bottom: 2rem;
  }

  .detail-section:last-child {
    margin-bottom: 0;
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--color-text-medium);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 1rem;
  }

  .section-title i {
    color: var(--color-primary);
  }

  .detail-item {
    padding: 1.25rem;
    background: var(--color-bg-light);
    border-radius: 12px;
    margin-bottom: 1rem;
    transition: all 0.3s ease;
  }

  .detail-item:last-child {
    margin-bottom: 0;
  }

  .detail-item:hover {
    background: #f0fdf4;
  }

  .detail-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-medium);
    margin-bottom: 0.5rem;
  }

  .detail-label i {
    color: var(--color-primary);
  }

  .detail-value {
    font-size: 1rem;
    color: var(--color-text-dark);
    word-break: break-word;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .copy-icon-btn {
    background: none;
    border: none;
    color: var(--color-text-muted);
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    font-size: 1rem;
  }

  .copy-icon-btn:hover {
    background: var(--color-white);
    color: var(--color-primary);
  }

  .copy-icon-btn.copied {
    color: var(--color-success);
  }

  .password-field {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .password-value {
    flex: 1;
    font-family: 'Courier New', monospace;
    letter-spacing: 2px;
    padding: 0.75rem 1rem;
    background: var(--color-white);
    border: 2px solid var(--color-border);
    border-radius: 10px;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .password-value:hover {
    border-color: var(--color-primary);
  }

  .password-actions {
    display: flex;
    gap: 0.5rem;
  }

  .toggle-btn,
  .copy-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    border: 2px solid var(--color-border);
    border-radius: 10px;
    font-weight: 600;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .toggle-btn {
    background: var(--color-white);
    color: var(--color-text-medium);
  }

  .toggle-btn:hover {
    background: var(--color-bg-hover);
    border-color: var(--color-text-medium);
  }

  .copy-btn {
    background: var(--color-primary);
    color: var(--color-white);
    border-color: var(--color-primary);
  }

  .copy-btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-green);
  }

  .copy-btn.copied {
    background: var(--color-success);
    border-color: var(--color-success);
  }

  .notes-content {
    white-space: pre-wrap;
    line-height: 1.6;
    color: var(--color-text-dark);
  }

  .empty-notes {
    color: var(--color-text-muted);
    font-style: italic;
  }

  .teams-section {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .team-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, var(--color-primary) 0%, #047857 100%);
    color: var(--color-white);
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
  }

  .team-badge:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-green);
  }

  .meta-info {
    display: flex;
    gap: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
    margin-top: 1.5rem;
  }

  .meta-item {
    flex: 1;
  }

  .meta-label {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 0.25rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .meta-value {
    font-size: 0.9rem;
    color: var(--color-text-dark);
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .content-container {
      padding: 1rem;
    }

    .credential-header {
      flex-direction: column;
      text-align: center;
    }

    .credential-domain {
      justify-content: center;
    }

    .header-actions {
      width: 100%;
      justify-content: center;
    }

    .password-field {
      flex-direction: column;
      align-items: stretch;
    }

    .password-actions {
      width: 100%;
    }

    .toggle-btn,
    .copy-btn {
      flex: 1;
    }

    .meta-info {
      flex-direction: column;
      gap: 1rem;
    }

    .detail-value {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>

<div class="content-container">
  <a href="{{ path('app_credential') }}" class="back-link">
    <i class="fas fa-arrow-left"></i>
    <span>Retour aux identifiants</span>
  </a>

  <div class="credential-header">
    <div class="credential-icon">
      <img 
        src="https://www.google.com/s2/favicons?domain={{ credential.domain }}&sz=128" 
        alt="Favicon de {{ credential.domain }}" 
        onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
      >
      <div class="fallback-letter">
        {{ credential.name|first|upper }}
      </div>
    </div>

    <div class="credential-title-section">
      <h1 class="credential-title">{{ credential.name }}</h1>
      <div class="credential-domain">
        <i class="fas fa-globe"></i>
        {% if credential.domain starts with 'http' %}
          <a href="{{ credential.domain }}" target="_blank" rel="noopener noreferrer">
            {{ credential.domain }}
            <i class="fas fa-external-link-alt" style="font-size: 0.75rem;"></i>
          </a>
        {% else %}
          <a href="https://{{ credential.domain }}" target="_blank" rel="noopener noreferrer">
            {{ credential.domain }}
            <i class="fas fa-external-link-alt" style="font-size: 0.75rem;"></i>
          </a>
        {% endif %}
      </div>
    </div>

    <div class="header-actions">
      <a href="{{ path('credential_edit', {'id': credential.id}) }}" class="action-btn edit" title="Modifier">
        <i class="fas fa-pencil-alt"></i>
      </a>
      <form method="post" action="{{ path('credential_delete', {'id': credential.id}) }}" onsubmit="return confirm('⚠️ Êtes-vous sûr de vouloir supprimer cet identifiant ?\n\nCette action est irréversible.');" style="display: inline;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ credential.id) }}">
        <button class="action-btn delete" title="Supprimer" type="submit">
          <i class="fas fa-trash"></i>
        </button>
      </form>
    </div>
  </div>

  <div class="credential-details">
    {# Informations d'identification #}
    <div class="detail-section">
      <h2 class="section-title">
        <i class="fas fa-key"></i>
        <span>Informations d'identification</span>
      </h2>

      <div class="detail-item">
        <div class="detail-label">
          <i class="fas fa-user"></i>
          <span>Nom d'utilisateur</span>
        </div>
        <div class="detail-value">
          <span>{{ credential.username }}</span>
          <button class="copy-icon-btn" onclick="copyToClipboard('{{ credential.username }}', this)" title="Copier le nom d'utilisateur">
            <i class="fas fa-copy"></i>
          </button>
        </div>
      </div>

      <div class="detail-item">
        <div class="detail-label">
          <i class="fas fa-lock"></i>
          <span>Mot de passe</span>
        </div>
        <div class="password-field">
          <div class="password-value" id="password-display">
            ••••••••••••••
          </div>
          <div class="password-actions">
            <button class="toggle-btn" onclick="togglePasswordVisibility()" title="Afficher/Masquer le mot de passe">
              <i class="fas fa-eye" id="toggle-icon"></i>
            </button>
<button class="copy-btn" onclick="copyPassword('{{ decryptedPassword|e('js') }}', this)" title="Copier le mot de passe">
  <i class="fas fa-copy"></i>
  <span id="copy-text">Copier</span>
</button>

          </div>
        </div>
      </div>
    </div>

    {# Équipes partagées #}
    {% if credential.teams is not empty %}
    <div class="detail-section">
      <h2 class="section-title">
        <i class="fas fa-users"></i>
        <span>Partagé avec</span>
      </h2>
      <div class="detail-item">
        <div class="teams-section">
          {% for team in credential.teams %}
            <span class="team-badge">
              <i class="fas fa-users"></i>
              {{ team.name }}
            </span>
          {% endfor %}
        </div>
      </div>
    </div>
    {% endif %}

    {# Notes #}
    <div class="detail-section">
      <h2 class="section-title">
        <i class="fas fa-sticky-note"></i>
        <span>Notes</span>
      </h2>
      {# <div class="detail-item">
        {% if credential.notes %}
          <div class="notes-content">{{ credential.notes }}</div>
        {% else %}
          <div class="empty-notes">Aucune note pour cet identifiant</div>
        {% endif %}
      </div> #}
    </div>

    {# Métadonnées #}
    <div class="meta-info">
      <div class="meta-item">
        <div class="meta-label">
          <i class="fas fa-calendar-plus"></i>
          Créé le
        </div>
        <div class="meta-value">{{ credential.createdAt|date('d/m/Y à H:i') }}</div>
      </div>
      <div class="meta-item">
        <div class="meta-label">
          <i class="fas fa-calendar-edit"></i>
          Modifié le
        </div>
        <div class="meta-value">
          {% if credential.updatedAt %}
            {{ credential.updatedAt|date('d/m/Y à H:i') }}
          {% else %}
            Jamais modifié
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
let passwordVisible = false;
const passwordDisplay = document.getElementById('password-display');
const actualPassword = '{{ decryptedPassword }}';

function togglePasswordVisibility() {
  const toggleIcon = document.getElementById('toggle-icon');
  passwordVisible = !passwordVisible;
  
  if (passwordVisible) {
    passwordDisplay.textContent = actualPassword;
    toggleIcon.classList.remove('fa-eye');
    toggleIcon.classList.add('fa-eye-slash');
  } else {
    passwordDisplay.textContent = '••••••••••••••';
    toggleIcon.classList.remove('fa-eye-slash');
    toggleIcon.classList.add('fa-eye');
  }
}

function copyPassword(password, btn) {
  navigator.clipboard.writeText(password).then(() => {
    const textSpan = document.getElementById('copy-text');
    const icon = btn.querySelector('i');

    icon.classList.remove('fa-copy');
    icon.classList.add('fa-check');
    textSpan.textContent = 'Copié !';
    btn.classList.add('copied');

    setTimeout(() => {
      icon.classList.remove('fa-check');
      icon.classList.add('fa-copy');
      textSpan.textContent = 'Copier';
      btn.classList.remove('copied');
    }, 2000);
  }).catch(err => {
    console.error('Erreur lors de la copie:', err);
    alert('Impossible de copier le mot de passe');
  });
}


function copyToClipboard(text, button) {
  navigator.clipboard.writeText(text).then(() => {
    const icon = button.querySelector('i');
    icon.classList.remove('fa-copy');
    icon.classList.add('fa-check');
    button.classList.add('copied');
    
    setTimeout(() => {
      icon.classList.remove('fa-check');
      icon.classList.add('fa-copy');
      button.classList.remove('copied');
    }, 2000);
  }).catch(err => {
    console.error('Erreur lors de la copie:', err);
  });
}
</script>

{% endblock %}