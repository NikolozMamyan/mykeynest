{# templates/credential/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}{{ credential.name }}{% endblock %}
{% block body %}

<style>
  .content-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
    animation: fadeIn 0.5s ease;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-medium);
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
    transition: color 0.3s ease;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .credential-header {
    background: var(--color-white);
    border: 2px solid var(--color-border);
    border-radius: 16px;
    padding: 2rem;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1.5rem;
    box-shadow: var(--shadow-sm);
  }

  .credential-icon {
    width: 80px;
    height: 80px;
    border-radius: 16px;
    background: linear-gradient(135deg, var(--color-primary) 0%, #047857 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-white);
    font-size: 2.5rem;
    font-weight: 700;
    flex-shrink: 0;
    box-shadow: var(--shadow-green);
  }

  .credential-title-section {
    flex: 1;
  }

  .credential-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin: 0 0 0.5rem 0;
  }

  .credential-domain {
    color: var(--color-text-muted);
    font-size: 1rem;
  }

  .credential-domain a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .credential-domain a:hover {
    text-decoration: underline;
  }

  .header-actions {
    display: flex;
    gap: 0.75rem;
  }

  .action-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: var(--color-white);
    border: 2px solid var(--color-border);
    border-radius: 12px;
    color: var(--color-text-medium);
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .action-btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-sm);
  }

  .action-btn.edit:hover {
    background: var(--color-warning);
    border-color: var(--color-warning);
    color: var(--color-white);
  }

  .action-btn.delete:hover {
    background: var(--color-danger-start);
    border-color: var(--color-danger-start);
    color: var(--color-white);
  }

  .credential-details {
    background: var(--color-white);
    border: 2px solid var(--color-border);
    border-radius: 16px;
    padding: 2rem;
    box-shadow: var(--shadow-sm);
  }

  .detail-section {
    margin-bottom: 2rem;
  }

  .detail-section:last-child {
    margin-bottom: 0;
  }

  .section-title {
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--color-text-medium);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 1rem;
  }

  .detail-item {
    padding: 1.25rem;
    background: var(--color-bg-light);
    border-radius: 12px;
    margin-bottom: 1rem;
  }

  .detail-item:last-child {
    margin-bottom: 0;
  }

  .detail-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-medium);
    margin-bottom: 0.5rem;
  }

  .detail-label i {
    color: var(--color-primary);
  }

  .detail-value {
    font-size: 1rem;
    color: var(--color-text-dark);
    word-break: break-all;
  }

  .password-field {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .password-value {
    flex: 1;
    font-family: 'Courier New', monospace;
    letter-spacing: 2px;
    padding: 0.75rem 1rem;
    background: var(--color-white);
    border: 2px solid var(--color-border);
    border-radius: 10px;
  }

  .copy-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: var(--color-primary);
    color: var(--color-white);
    border: none;
    border-radius: 10px;
    font-weight: 600;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .copy-btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-green);
  }

  .copy-btn.copied {
    background: var(--color-success);
  }

  .notes-content {
    white-space: pre-wrap;
    line-height: 1.6;
  }

  .meta-info {
    display: flex;
    gap: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
    margin-top: 1.5rem;
  }

  .meta-item {
    flex: 1;
  }

  .meta-label {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 0.25rem;
  }

  .meta-value {
    font-size: 0.9rem;
    color: var(--color-text-dark);
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .content-container {
      padding: 1rem;
    }

    .credential-header {
      flex-direction: column;
      text-align: center;
    }

    .header-actions {
      width: 100%;
      justify-content: center;
    }

    .password-field {
      flex-direction: column;
      align-items: stretch;
    }

    .meta-info {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>

<div class="content-container">
  <a href="{{ path('app_credential') }}" class="back-link">
    <i class="fas fa-arrow-left"></i>
    <span>Retour aux identifiants</span>
  </a>

  <div class="credential-header">
    <div class="credential-icon">
      <img 
        src="https://www.google.com/s2/favicons?domain={{ credential.domain }}&sz=64" 
        alt="favicon" 
        onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
      >
      <div style="display:none;">
        {{ credential.name|first|upper }}
      </div>
    </div>

    <div class="credential-title-section">
      <h1 class="credential-title">{{ credential.name }}</h1>
      <div class="credential-domain">
        <i class="fas fa-globe"></i>
        <a href="{{ credential.domain }}" target="_blank" rel="noopener">
          {{ credential.domain }}
        </a>
      </div>
    </div>

    <div class="header-actions">
      <a href="{{ path('credential_edit', {'id': credential.id}) }}" class="action-btn edit" title="Modifier">
        <i class="fas fa-pencil-alt"></i>
      </a>
      <form method="post" action="{{ path('credential_delete', {'id': credential.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet identifiant ?');" style="display: inline;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ credential.id) }}">
        <button class="action-btn delete" title="Supprimer" type="submit">
          <i class="fas fa-trash"></i>
        </button>
      </form>
    </div>
  </div>

  <div class="credential-details">
    <div class="detail-section">
      <h2 class="section-title">
        <i class="fas fa-key"></i> Informations d'identification
      </h2>

      <div class="detail-item">
        <div class="detail-label">
          <i class="fas fa-user"></i>
          <span>Identifiant / Email</span>
        </div>
        <div class="detail-value">{{ credential.username }}</div>
      </div>

      <div class="detail-item">
        <div class="detail-label">
          <i class="fas fa-lock"></i>
          <span>Mot de passe</span>
        </div>
        <div class="password-field">
          <div class="password-value" id="password-display">
            ••••••••••••••
          </div>
          <button class="copy-btn" onclick="copyPassword('{{ decryptedPassword }}')">
            <i class="fas fa-copy"></i>
            <span id="copy-text">Copier</span>
          </button>
        </div>
      </div>
    </div>

 
    <div class="detail-section">
      <h2 class="section-title">
        <i class="fas fa-sticky-note"></i> Notes
      </h2>
      <div class="detail-item">
        <div class="notes-content">Exemple!</div>
      </div>
    </div>
 

    <div class="meta-info">
      <div class="meta-item">
        <div class="meta-label">Créé le</div>
        <div class="meta-value">{{ credential.createdAt|date('d/m/Y à H:i') }}</div>
      </div>
      <div class="meta-item">
        <div class="meta-label">Modifié le</div>
        <div class="meta-value">{{ credential.updatedAt|date('d/m/Y à H:i') }}</div>
      </div>
    </div>
  </div>
</div>

<script>
let passwordVisible = false;
const passwordDisplay = document.getElementById('password-display');

function copyPassword(password) {
  navigator.clipboard.writeText(password).then(() => {
    const btn = event.currentTarget;
    const textSpan = document.getElementById('copy-text');
    const icon = btn.querySelector('i');
    
    icon.classList.remove('fa-copy');
    icon.classList.add('fa-check');
    textSpan.textContent = 'Copié !';
    btn.classList.add('copied');
    
    setTimeout(() => {
      icon.classList.remove('fa-check');
      icon.classList.add('fa-copy');
      textSpan.textContent = 'Copier';
      btn.classList.remove('copied');
    }, 2000);
  });
}
</script>

{% endblock %}