<!-- Two Column Layout -->
<div class="dashboard-grid">
  <!-- Recent Activity -->
  <div class="dashboard-card">
    <div class="card-header">
      <h2>
        <i class="fas fa-clock"></i>
        {{ 'dashboard.recent_activity.title'|trans }}
      </h2>
      <button class="btn-link">{{ 'dashboard.recent_activity.view_all'|trans }}</button>
    </div>
    <div class="card-content">
      <div class="activity-list">
        {% if activity is empty %}
          <div class="empty-state">
            <div class="empty-title">{{ 'dashboard.recent_activity.empty.title'|trans }}</div>
            <div class="empty-desc">{{ 'dashboard.recent_activity.empty.desc'|trans }}</div>
          </div>
        {% else %}
          {% for a in activity %}
            <div class="activity-item">
              <div class="activity-icon activity-icon--{{ a.type }}">
                <i class="fas
                  {% if a.type == 'credential_created' %} fa-plus
                  {% elseif a.type == 'share_created' %} fa-share
                  {% else %} fa-file
                  {% endif %}
                "></i>
              </div>

              <div class="activity-details">
<div class="activity-title">{{ a.title_key|trans }}</div>
<div class="activity-desc">
  {{ a.desc ?: (a.type == 'draft_created'
      ? ('dashboard.activity.fallback_unnamed'|trans)
      : ('dashboard.activity.fallback_credential'|trans)
  ) }}
</div>

                <div class="activity-time">{{ a.at|date('d/m/Y H:i') }}</div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Teams Overview -->
  <div class="dashboard-card">
    <div class="card-header">
      <h2>
        <i class="fas fa-users"></i>
        {{ 'dashboard.teams.title'|trans }}
      </h2>
      <button class="btn-primary-small">
        <i class="fas fa-plus"></i>
        {{ 'dashboard.teams.create'|trans }}
      </button>
    </div>

    <div class="card-content">
      <div class="teams-list">
        {% if teams is empty %}
          <div class="empty-state">
            <div class="empty-title">{{ 'dashboard.teams.empty.title'|trans }}</div>
            <div class="empty-desc">{{ 'dashboard.teams.empty.desc'|trans }}</div>
          </div>
        {% else %}
          {% for t in teams %}
            <div class="team-item">
              <div class="team-avatar">{{ t.avatar }}</div>
              <div class="team-info">
                <div class="team-name">{{ t.name }}</div>
                <div class="team-meta">
                  <span><i class="fas fa-users"></i> {{ t.membersCount }} {{ 'dashboard.teams.meta.members'|trans }}</span>
                  <span><i class="fas fa-key"></i> {{ t.credentialsCount }} {{ 'dashboard.teams.meta.credentials'|trans }}</span>
                </div>
              </div>
              <span class="badge badge-{{ t.roleClass }}">{{ t.roleLabel }}</span>
            </div>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</div>

<!-- Quick Actions & Drafts -->
<div class="dashboard-grid">
  <!-- Quick Actions -->
  <div class="dashboard-card">
    <div class="card-header">
      <h2>
        <i class="fas fa-bolt"></i>
