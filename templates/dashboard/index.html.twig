{% extends 'base.html.twig' %}
{% block title %}Gestionnaire de mots de passe{% endblock %}
{% block body %}
<style>
/* ===== Dashboard Layout ===== */
.stats-grid{
  display:grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap:20px;
  margin: 10px 0 24px;
}

.dashboard-grid{
  display:grid;
  grid-template-columns: 1.3fr 1fr;
  gap:20px;
  margin-bottom:20px;
}

@media (max-width: 1000px){
  .stats-grid{ grid-template-columns: repeat(2, minmax(0,1fr)); }
  .dashboard-grid{ grid-template-columns: 1fr; }
}

/* ===== Cards avec animations ===== */
.dashboard-card,
.stat-card{
  background: var(--color-white);
  border: 1px solid var(--color-border);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-sm);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.dashboard-card::before,
.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
  transition: left 0.5s;
}

.dashboard-card:hover::before,
.stat-card:hover::before {
  left: 100%;
}

.dashboard-card:hover,
.stat-card:hover{
  transform: translateY(-4px);
  box-shadow: 0 12px 24px -10px rgba(0,0,0,0.15);
  border-color: rgba(16,185,129,0.3);
}

.card-header{
  display:flex;
  align-items:center;
  justify-content:space-between;
  padding:20px;
  border-bottom: 1px solid var(--color-border);
  background: linear-gradient(135deg, rgba(16,185,129,0.02) 0%, rgba(16,185,129,0.05) 100%);
}

.card-header h2{
  font-size: 17px;
  font-weight: 900;
  color: var(--color-text-dark);
  display:flex;
  align-items:center;
  gap:12px;
  letter-spacing: -0.3px;
}

.card-header h2 i {
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.card-content{ 
  padding:20px;
  animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

/* ===== Stat Card améliorée ===== */
.stat-card{
  display:flex;
  gap:16px;
  padding:20px;
  align-items:flex-start;
  cursor: pointer;
  background: linear-gradient(135deg, var(--color-white) 0%, rgba(16,185,129,0.02) 100%);
}

.stat-icon{
  width:52px;
  height:52px;
  border-radius: 16px;
  display:flex;
  align-items:center;
  justify-content:center;
  color: #fff;
  box-shadow: 0 8px 16px -4px rgba(16,185,129,0.4);
  position: relative;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-8px); }
}

.stat-icon::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 16px;
  background: inherit;
  opacity: 0.3;
  filter: blur(10px);
  z-index: -1;
}

.stat-icon i {
  font-size: 22px;
  animation: rotate 4s linear infinite;
}

@keyframes rotate {
  0%, 90%, 100% { transform: rotate(0deg); }
  95% { transform: rotate(15deg) scale(1.1); }
}

.stat-content {
  flex: 1;
}

.stat-content .stat-label{
  font-size: 13px;
  color: var(--color-text-muted);
  margin-bottom: 8px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.stat-content .stat-value{
  font-size: 32px;
  font-weight: 900;
  color: var(--color-text-dark);
  line-height:1;
  background: linear-gradient(135deg, var(--color-text-dark) 0%, var(--color-primary) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: countUp 0.8s ease-out;
}

@keyframes countUp {
  from { 
    opacity: 0;
    transform: translateY(20px);
  }
  to { 
    opacity: 1;
    transform: translateY(0);
  }
}

.stat-change{
  margin-top: 12px;
  font-size: 13px;
  display:inline-flex;
  align-items:center;
  gap:6px;
  padding: 4px 10px;
  border-radius: 20px;
  font-weight: 700;
  animation: slideIn 0.5s ease-out 0.3s backwards;
}

@keyframes slideIn {
  from { 
    opacity: 0;
    transform: translateX(-10px);
  }
  to { 
    opacity: 1;
    transform: translateX(0);
  }
}

.stat-change.positive{ 
  color: var(--color-success);
  background: rgba(16,185,129,0.1);
}

.stat-change.neutral{ 
  color: var(--color-text-muted);
  background: rgba(100,116,139,0.1);
}

.stat-change.error{ 
  color: var(--color-danger-end);
  background: rgba(239,68,68,0.1);
}

.stat-change i {
  animation: bounce 1s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-3px); }
}

/* ===== Buttons améliorés ===== */
.btn-link{
  background: transparent;
  border: 0;
  cursor:pointer;
  color: var(--color-primary);
  font-weight: 700;
  font-size: 14px;
  position: relative;
  transition: all 0.3s ease;
}

.btn-link::after {
  content: '';
  position: absolute;
  bottom: -2px;
  left: 0;
  width: 0;
  height: 2px;
  background: var(--color-primary);
  transition: width 0.3s ease;
}

.btn-link:hover::after {
  width: 100%;
}

.btn-link:hover {
  transform: translateX(4px);
}

.btn-primary-small{
  display:inline-flex;
  gap:8px;
  align-items:center;
  border:0;
  cursor:pointer;
  padding:10px 16px;
  border-radius: 999px;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-success) 100%);
  color: #fff;
  font-weight: 800;
  box-shadow: 0 4px 12px -2px rgba(16,185,129,0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.btn-primary-small::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255,255,255,0.3);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.btn-primary-small:hover::before {
  width: 300px;
  height: 300px;
}

.btn-primary-small:hover{
  transform: translateY(-2px) scale(1.05);
  box-shadow: 0 8px 20px -4px rgba(16,185,129,0.5);
}

.btn-primary-small:active {
  transform: translateY(0) scale(0.98);
}

/* ===== Activity améliorée ===== */
.activity-list{ 
  display:flex; 
  flex-direction:column; 
  gap:14px;
}

.activity-item{
  display:flex;
  gap:14px;
  padding:14px;
  border-radius: var(--border-radius-sm);
  background: var(--color-bg-light);
  border: 1px solid var(--color-border);
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.activity-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 3px;
  background: var(--color-primary);
  transform: scaleY(0);
  transition: transform 0.3s ease;
}

.activity-item:hover::before {
  transform: scaleY(1);
}

.activity-item:hover{
  background: var(--color-white);
  transform: translateX(6px);
  box-shadow: 0 4px 12px -4px rgba(0,0,0,0.1);
  border-color: rgba(16,185,129,0.3);
}

.activity-icon{
  width:44px;
  height:44px;
  border-radius: 14px;
  display:flex;
  align-items:center;
  justify-content:center;
  background: var(--color-bg-hover);
  color: var(--color-primary);
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.activity-item:hover .activity-icon {
  transform: rotate(10deg) scale(1.1);
}

.activity-icon--credential_created{ 
  background: rgba(16,185,129,.15); 
  color: var(--color-primary);
  box-shadow: 0 4px 8px -2px rgba(16,185,129,0.3);
}

.activity-icon--share_created{ 
  background: rgba(245,158,11,.18); 
  color: var(--color-warning);
  box-shadow: 0 4px 8px -2px rgba(245,158,11,0.3);
}

.activity-icon--draft_created{ 
  background: rgba(59,130,246,.14); 
  color: #3b82f6;
  box-shadow: 0 4px 8px -2px rgba(59,130,246,0.3);
}

.activity-title{
  font-weight: 900;
  color: var(--color-text-dark);
  font-size: 15px;
  margin-bottom: 4px;
}

.activity-desc{
  color: var(--color-text-medium);
  font-size: 13px;
  line-height: 1.5;
}

.activity-time{
  color: var(--color-text-muted);
  margin-top: 6px;
  font-size: 12px;
  display: flex;
  align-items: center;
  gap: 4px;
}

.activity-time::before {
  content: '•';
  font-weight: bold;
}

/* ===== Teams améliorées ===== */
.teams-list{ 
  display:flex; 
  flex-direction:column; 
  gap:14px;
}

.team-item{
  display:flex;
  align-items:center;
  gap:14px;
  padding:14px;
  border-radius: var(--border-radius-sm);
  background: var(--color-bg-light);
  border: 1px solid var(--color-border);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  position: relative;
}

.team-item::after {
  content: '';
  position: absolute;
  right: 14px;
  top: 50%;
  transform: translateY(-50%);
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: var(--color-primary);
  opacity: 0;
  transition: all 0.3s ease;
}

.team-item:hover::after {
  opacity: 1;
  right: 10px;
}

.team-item:hover{
  background: var(--color-white);
  transform: translateY(-2px);
  box-shadow: 0 8px 16px -4px rgba(0,0,0,0.1);
  border-color: rgba(16,185,129,0.4);
}

.team-avatar{
  width:48px;
  height:48px;
  border-radius: 16px;
  display:flex;
  align-items:center;
  justify-content:center;
  font-weight: 900;
  font-size: 18px;
  color:#fff;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-success) 100%);
  box-shadow: 0 6px 12px -3px rgba(16,185,129,0.4);
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.team-item:hover .team-avatar {
  transform: scale(1.1) rotate(-5deg);
  box-shadow: 0 8px 16px -3px rgba(16,185,129,0.5);
}

.team-info {
  flex: 1;
}

.team-name{
  font-weight: 900;
  color: var(--color-text-dark);
  font-size: 15px;
  margin-bottom: 6px;
}

.team-meta{
  display:flex;
  gap:14px;
  color: var(--color-text-muted);
  font-size: 12px;
  font-weight: 600;
}

.team-meta span {
  display: flex;
  align-items: center;
  gap: 4px;
}

.team-meta i{ 
  color: var(--color-primary);
  font-size: 11px;
}

.badge{
  margin-left:auto;
  font-size: 11px;
  font-weight: 800;
  padding:6px 12px;
  border-radius: 999px;
  border: 1px solid var(--color-border);
  background: var(--color-white);
  color: var(--color-text-medium);
  text-transform: uppercase;
  letter-spacing: 0.3px;
  transition: all 0.3s ease;
}

.badge-owner{
  border-color: rgba(16,185,129,.4);
  background: rgba(16,185,129,.15);
  color: var(--color-primary);
  box-shadow: 0 2px 6px -2px rgba(16,185,129,0.3);
}

.badge-admin{
  border-color: rgba(245,158,11,.4);
  background: rgba(245,158,11,.15);
  color: var(--color-warning);
  box-shadow: 0 2px 6px -2px rgba(245,158,11,0.3);
}

.badge-member{
  border-color: rgba(100,116,139,.4);
  background: rgba(100,116,139,.15);
  color: var(--color-text-medium);
}

/* ===== Quick actions ===== */
.quick-actions{
  display:grid;
  grid-template-columns: repeat(2, minmax(0,1fr));
  gap:14px;
}

.action-btn{
  border: 1px solid var(--color-border);
  background: var(--color-bg-light);
  border-radius: var(--border-radius-sm);
  padding:16px 14px;
  cursor:pointer;
  display:flex;
  align-items:center;
  gap:12px;
  color: var(--color-text-dark);
  font-weight: 800;
  font-size: 14px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(16,185,129,0.1), transparent);
  transition: left 0.5s;
}

.action-btn:hover::before {
  left: 100%;
}

.action-btn i{
  color: var(--color-primary);
  font-size: 20px;
  transition: all 0.3s ease;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(16,185,129,0.1);
  border-radius: 10px;
}

.action-btn:hover{
  background: var(--color-white);
  transform: translateY(-3px);
  box-shadow: 0 8px 20px -6px rgba(16,185,129,0.3);
  border-color: rgba(16,185,129,0.4);
}

.action-btn:hover i {
  transform: scale(1.2) rotate(10deg);
  background: rgba(16,185,129,0.2);
}

.action-btn:active {
  transform: translateY(-1px);
}

/* ===== Drafts ===== */
.drafts-list{ 
  display:flex; 
  flex-direction:column; 
  gap:14px;
}

.draft-item{
  display:flex;
  align-items:center;
  gap:14px;
  padding:14px;
  border-radius: var(--border-radius-sm);
  background: var(--color-bg-light);
  border: 1px solid var(--color-border);
  transition: all 0.3s ease;
  cursor: pointer;
}

.draft-item:hover{
  background: var(--color-white);
  transform: translateX(4px);
  box-shadow: 0 4px 12px -4px rgba(0,0,0,0.1);
  border-color: rgba(16,185,129,0.3);
}

.draft-icon{
  width:44px;
  height:44px;
  border-radius: 14px;
  display:flex;
  align-items:center;
  justify-content:center;
  background: rgba(139,92,246,0.1);
  color: #8b5cf6;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.draft-item:hover .draft-icon {
  transform: scale(1.1) rotate(-5deg);
  background: rgba(139,92,246,0.15);
}

.draft-info {
  flex: 1;
}

.draft-name{
  font-weight: 900;
  color: var(--color-text-dark);
  font-size: 14px;
  margin-bottom: 4px;
}

.draft-time{
  font-size: 12px;
  color: var(--color-text-muted);
  font-weight: 600;
}

.btn-icon{
  margin-left:auto;
  width:38px;
  height:38px;
  border-radius: 12px;
  border: 1px solid var(--color-border);
  background: var(--color-white);
  cursor:pointer;
  display:flex;
  align-items:center;
  justify-content:center;
  color: var(--color-text-medium);
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.btn-icon:hover{
  background: var(--color-primary);
  color: white;
  transform: rotate(15deg) scale(1.1);
  border-color: var(--color-primary);
  box-shadow: 0 4px 8px -2px rgba(16,185,129,0.4);
}

/* ===== Empty state ===== */
.empty-state{
  padding:24px;
  border: 2px dashed var(--color-border);
  border-radius: var(--border-radius-sm);
  background: linear-gradient(135deg, rgba(16,185,129,0.02) 0%, rgba(16,185,129,0.05) 100%);
  text-align: center;
  transition: all 0.3s ease;
}

.empty-state:hover {
  border-color: rgba(16,185,129,0.3);
  background: rgba(16,185,129,0.08);
}

.empty-title{
  font-weight: 900;
  color: var(--color-text-dark);
  font-size: 15px;
  margin-bottom: 8px;
}

.empty-desc{
  color: var(--color-text-muted);
  font-size: 13px;
  line-height: 1.6;
}

/* ===== Security Score Styles ===== */
.security-score {
  display: grid;
  grid-template-columns: 200px 1fr;
  gap: 32px;
  align-items: center;
}

@media (max-width: 768px) {
  .security-score {
    grid-template-columns: 1fr;
    justify-items: center;
    text-align: center;
  }
}

.score-circle {
  position: relative;
  width: 200px;
  height: 200px;
  animation: fadeInScale 0.8s ease-out;
}

@keyframes fadeInScale {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.score-circle svg {
  transform: rotate(-90deg);
  filter: drop-shadow(0 4px 12px rgba(16,185,129,0.3));
}

.score-circle circle:last-child {
  animation: drawCircle 2s ease-out forwards;
}

@keyframes drawCircle {
  from {
    stroke-dashoffset: 565;
  }
  to {
    stroke-dashoffset: 113;
  }
}

.score-value {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 48px;
  font-weight: 900;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-success) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: countUp 1.5s ease-out;
}

.score-details {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.score-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 16px;
  background: var(--color-bg-light);
  border-radius: var(--border-radius-sm);
  border: 1px solid var(--color-border);
  transition: all 0.3s ease;
  animation: slideInRight 0.5s ease-out backwards;
}

.score-item:nth-child(1) { animation-delay: 0.2s; }
.score-item:nth-child(2) { animation-delay: 0.3s; }
.score-item:nth-child(3) { animation-delay: 0.4s; }

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(-20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.score-item:hover {
  background: var(--color-white);
  transform: translateX(4px);
  box-shadow: 0 4px 12px -4px rgba(0,0,0,0.1);
}

.score-item i {
  font-size: 18px;
  flex-shrink: 0;
}

.score-item span {
  font-size: 14px;
  color: var(--color-text-dark);
  font-weight: 700;
}

.btn-primary {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 14px 28px;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-success) 100%);
  color: white;
  border: none;
  border-radius: 999px;
  font-weight: 800;
  font-size: 15px;
  cursor: pointer;
  box-shadow: 0 6px 16px -4px rgba(16,185,129,0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.btn-primary::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255,255,255,0.3);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.btn-primary:hover::before {
  width: 400px;
  height: 400px;
}

.btn-primary:hover {
  transform: translateY(-2px) scale(1.05);
  box-shadow: 0 10px 24px -6px rgba(16,185,129,0.5);
}

.btn-primary:active {
  transform: translateY(0) scale(0.98);
}

/* Animation au chargement de la page */
@keyframes pageLoad {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.stats-grid > * {
  animation: pageLoad 0.6s ease-out backwards;
}

.stats-grid > *:nth-child(1) { animation-delay: 0.1s; }
.stats-grid > *:nth-child(2) { animation-delay: 0.2s; }
.stats-grid > *:nth-child(3) { animation-delay: 0.3s; }
.stats-grid > *:nth-child(4) { animation-delay: 0.4s; }

.dashboard-grid > * {
  animation: pageLoad 0.6s ease-out backwards;
}

.dashboard-grid > *:nth-child(1) { animation-delay: 0.5s; }
.dashboard-grid > *:nth-child(2) { animation-delay: 0.6s; }

</style>

