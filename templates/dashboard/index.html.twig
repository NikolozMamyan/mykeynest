------------------------------ #}
{% set score = security.score|default(0) %}
{% set circumference = 2 * 3.14159 * 90 %}
{% set dashOffset = circumference - (circumference * score / 100) %}

{% set strokeColor =
  score >= 80 ? '#059669' :
  (score >= 50 ? '#f59e0b' : '#ef4444')
%}

<div class="dashboard-card">
  <div class="card-header">
    <h2><i class="fas fa-shield-alt"></i> {{ 'dashboard.security.title'|trans }}</h2>
  </div>

  <div class="card-content">
    <div class="security-score">
      <div class="score-circle" aria-label="{{ 'dashboard.security.score'|trans }} {{ score }}%">
        <svg viewBox="0 0 200 200">
          <circle cx="100" cy="100" r="90" fill="none" stroke="#e2e8f0" stroke-width="20"/>
          <circle class="progress"
                  cx="100" cy="100" r="90" fill="none"
                  stroke="{{ strokeColor }}"
                  stroke-width="20"
                  stroke-dasharray="{{ circumference }}"
                  stroke-dashoffset="{{ circumference }}"
                  data-target-offset="{{ dashOffset }}"
                  stroke-linecap="round"/>
        </svg>
        <div class="score-value js-score" data-score="{{ score }}">0%</div>
      </div>

      <div class="score-details">
        <div class="score-item">
          <i class="fas fa-check-circle" style="color:#10b981;"></i>
          <span>{{ security.strong|default(0) }} {{ 'dashboard.security.strong_passwords'|trans }}</span>
        </div>
        <div class="score-item">
          <i class="fas fa-exclamation-triangle" style="color:#f59e0b;"></i>
          <span>{{ security.weak|default(0) }} {{ 'dashboard.security.weak_passwords'|trans }}</span>
        </div>
        <div class="score-item">
          <i class="fas fa-times-circle" style="color:#ef4444;"></i>
          <span>{{ security.reused|default(0) }} {{ 'dashboard.security.reused_passwords'|trans }}</span>
        </div>

        <a class="btn-primary" href="{{ path('app_security_checker') }}" style="margin-top:20px;">
          {{ 'dashboard.security.improve'|trans }}
        </a>
      </div>
    </div>
  </div>
</div>

<script>
(() => {
  // Animation compteur (stat cards)
  const easeOutCubic = t => 1 - Math.pow(1 - t, 3);

  function animateNumber(el, to, duration = 700) {
    const from = 0;
    const start = performance.now();
    function tick(now) {
      const p = Math.min(1, (now - start) / duration);
      const v = Math.round(from + (to - from) * easeOutCubic(p));
      el.textContent = String(v);
      if (p < 1) requestAnimationFrame(tick);
    }
    requestAnimationFrame(tick);
  }

  document.querySelectorAll('.js-count').forEach(el => {
    const to = parseInt(el.dataset.count || '0', 10);
    animateNumber(el, isNaN(to) ? 0 : to, 650);
  });

  // Animation score + cercle
  const scoreEl = document.querySelector('.js-score');
  const circle = document.querySelector('.score-circle circle.progress');
  if (scoreEl) {
    const score = parseInt(scoreEl.dataset.score || '0', 10);
    let start = performance.now();
    const duration = 900;

    function tick(now) {
      const p = Math.min(1, (now - start) / duration);
      const v = Math.round(score * easeOutCubic(p));
      scoreEl.textContent = v + '%';
      if (p < 1) requestAnimationFrame(tick);
    }
    requestAnimationFrame(tick);
  }

  if (circle) {
    // Départ plein cercle => offset = circumference (déjà dans Twig)
    // Puis on applique la vraie valeur pour déclencher la transition
    const target = parseFloat(circle.dataset.targetOffset || '0');
    requestAnimationFrame(() => {
      circle.style.strokeDashoffset = String(target);
    });
  }
})();
</script>

