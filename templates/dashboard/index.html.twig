        <button class="action-btn">
          <i class="fas fa-share-alt"></i>
          <span>{{ 'dashboard.quick_actions.share_access'|trans }}</span>
        </button>
        <button class="action-btn">
          <i class="fas fa-users-cog"></i>
          <span>{{ 'dashboard.quick_actions.create_team'|trans }}</span>
        </button>
      </div>
    </div>
  </div>

  <!-- Drafts -->
  <div class="dashboard-card">
    <div class="card-header">
      <h2>
        <i class="fas fa-file-alt"></i>
        {{ 'dashboard.drafts.title'|trans }}
      </h2>
      <button class="btn-link">{{ 'dashboard.drafts.view_all'|trans }}</button>
    </div>

    <div class="card-content">
      <div class="drafts-list">
        {% if drafts is empty %}
          <div class="empty-state">
            <div class="empty-title">{{ 'dashboard.drafts.empty.title'|trans }}</div>
            <div class="empty-desc">{{ 'dashboard.drafts.empty.desc'|trans }}</div>
          </div>
        {% else %}
          {% for d in drafts %}
            <div class="draft-item">
              <div class="draft-icon"><i class="fas fa-file"></i></div>
              <div class="draft-info">
                <div class="draft-name">{{ d.name ?: ('dashboard.drafts.unnamed'|trans) }}</div>
                <div class="draft-time">
                  {{ 'dashboard.drafts.created_on'|trans }} {{ d.createdAt|date('d/m/Y H:i') }}
                </div>
              </div>
              <button class="btn-icon" title="{{ 'dashboard.drafts.complete'|trans }}">
                <i class="fas fa-edit"></i>
              </button>
            </div>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</div>

<!-- Security Score -->
<div class="dashboard-card">
  <div class="card-header">
    <h2>
      <i class="fas fa-shield-alt"></i>
      {{ 'dashboard.security.title'|trans }}
    </h2>
  </div>

  <div class="card-content">
    <div class="security-score">
      <div class="score-circle">
        <svg viewBox="0 0 200 200">
          <circle cx="100" cy="100" r="90" fill="none" stroke="#e2e8f0" stroke-width="20"/>
          <circle cx="100" cy="100" r="90" fill="none" stroke="#059669" stroke-width="20"
                  stroke-dasharray="565" stroke-dashoffset="113"
                  transform="rotate(-90 100 100)" stroke-linecap="round"/>
        </svg>
        <div class="score-value"> %</div>
      </div>

      <div class="score-details">
        <div class="score-item">
          <i class="fas fa-check-circle" style="color: #10b981;"></i>
          <span> {{ 'dashboard.security.strong_passwords'|trans }}</span>
        </div>
        <div class="score-item warning">
          <i class="fas fa-exclamation-triangle" style="color: #f59e0b;"></i>
          <span>{{ 'dashboard.security.weak_passwords'|trans }}</span>
        </div>
        <div class="score-item error">
          <i class="fas fa-times-circle" style="color: #ef4444;"></i>
          <span> {{ 'dashboard.security.reused_passwords'|trans }}</span>
        </div>

        <button class="btn-primary" style="margin-top: 20px;">
          {{ 'dashboard.security.improve'|trans }}
        </button>
      </div>
    </div>
  </div>
</div>
{% endblock %}