  });
  const activeScreenshot = document.querySelector(`.screenshot[data-step="${step}"]`);
  if (activeScreenshot) {
    activeScreenshot.classList.add('active');
  }

  document.querySelectorAll('.nav-dot').forEach(dot => dot.classList.remove('active'));
  const activeDot = document.querySelector(`.nav-dot[data-step="${step}"]`);
  if (activeDot) activeDot.classList.add('active');
  currentStep = step;
}

