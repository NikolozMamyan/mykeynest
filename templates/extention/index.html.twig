{% extends 'base.html.twig' %}
{% block title %}Extension navigateur{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>



/* ‚Äî‚Äî‚Äî Animations ‚Äî‚Äî‚Äî */




@keyframes pulse-glow {
  0%, 100% { box-shadow: 0 0 20px rgba(5, 150, 105, 0.3); }
  50% { box-shadow: 0 0 40px rgba(5, 150, 105, 0.6); }
}







@keyframes pulse-ring {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  100% {
    transform: scale(1.5);
    opacity: 0;
  }
}


/* ‚Äî‚Äî‚Äî Layout ‚Äî‚Äî‚Äî */
.extension-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 60px 20px;
  animation: fadeIn 0.4s ease-out;
}

/* ‚Äî‚Äî‚Äî Hero Section ‚Äî‚Äî‚Äî */
.hero-section {
  text-align: center;
  margin-bottom: 80px;
  position: relative;
}

.hero-icon-wrapper {
  position: relative;
  display: inline-block;
  margin-bottom: 30px;
}

.hero-icon {
  width: 90px;
  height: 90px;
  border-radius: 20px;
  background: linear-gradient(135deg, var(--color-primary) 0%, #059669 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 2.5rem;
  box-shadow: 0 8px 24px rgba(5, 150, 105, 0.35);

  margin: 0 auto;
}

.icon-ring {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120px;
  height: 120px;
  border: 3px solid var(--color-primary);
  border-radius: 50%;
  opacity: 0.3;
  animation: pulse-glow 2s ease-in-out infinite;
}

.hero-section h1 {
  font-size: 3.5rem;
color:var(--color-text-dark);
  margin-bottom: 20px;
  font-weight: 800;
  letter-spacing: -1px;
}

.hero-section .tagline {
  font-size: 1.4rem;
  color: var(--color-text-muted);
  margin-bottom: 40px;
  font-weight: 300;
}

.download-btn {
  display: inline-flex;
  align-items: center;
  gap: 12px;
  background: linear-gradient(135deg, var(--color-primary) 0%, #047857 100%);
  color: var(--color-white);
  padding: 20px 50px;
  border-radius: 50px;
  text-decoration: none;
  font-size: 1.2rem;
  font-weight: 700;
  box-shadow: 0 10px 30px rgba(5, 150, 105, 0.4);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  border: none;
  cursor: pointer;
}

.download-btn:before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  transition: left 0.5s;
}

.download-btn:hover:before {
  left: 100%;
}

.download-btn:hover {
  transform: translateY(-3px) scale(1.05);
  box-shadow: 0 15px 40px rgba(5, 150, 105, 0.5);
  color: var(--color-white);
}

.download-btn i {
  font-size: 1.3rem;
  animation: bounce 2s infinite;
}

/* ‚Äî‚Äî‚Äî Cards ‚Äî‚Äî‚Äî */
.card {
  background: var(--color-white);
  border: 1px solid var(--color-border);
  border-radius: 16px;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
  overflow: hidden;
  transition: all 0.3s ease;
  animation: slideInUp 0.6s ease forwards;
  opacity: 0;
}

.card:nth-child(1) { animation-delay: 0.1s; }
.card:nth-child(2) { animation-delay: 0.2s; }
.card:nth-child(3) { animation-delay: 0.3s; }

.card:hover {
  transform: translateY(-8px);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
  border-color: var(--color-primary);
}

.card-header {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  padding: 24px 28px;
  background: linear-gradient(135deg, rgba(5, 150, 105, 0.03) 0%, rgba(5, 150, 105, 0.01) 100%);
  border-bottom: 1px solid var(--color-border);
}

.card-icon {
  width: 48px;
  height: 48px;
  border-radius: 12px;
  background: linear-gradient(135deg, var(--color-primary) 0%, #059669 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 1.3rem;
  box-shadow: 0 4px 12px rgba(5, 150, 105, 0.25);
  flex-shrink: 0;
  position: relative;
}

.card-icon:after {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 12px;
  border: 2px solid var(--color-primary);
  animation: pulse-ring 2s infinite;
}

.card-title {
  flex: 1;
}

.card-title h2 {
  margin: 0;
  font-size: 1.5rem;
  color: var(--color-text-dark);
  font-weight: 800;
  letter-spacing: -0.3px;
}

.card-title .helper {
  color: var(--color-text-muted);
  font-size: 0.9rem;
  margin-top: 4px;
  line-height: 1.4;
}

.card-body {
  padding: 32px 28px;
}

/* ‚Äî‚Äî‚Äî Demo Window (Computer Window) ‚Äî‚Äî‚Äî */
.demo-window {
  background: #1e293b;
  border-radius: 16px;
  box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
  margin: 60px auto;
  max-width: 1000px;
  overflow: hidden;
  transform: perspective(1000px) rotateX(2deg);
  transition: transform 0.3s ease;
}

.demo-window:hover {
  transform: perspective(1000px) rotateX(0deg) translateY(-5px);
}

.window-header {
  background: linear-gradient(180deg, #2d3748 0%, #1e293b 100%);
  padding: 12px 20px;
  display: flex;
  align-items: center;
  gap: 8px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.window-dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  transition: transform 0.2s;
  cursor: pointer;
}

.window-dot:hover {
  transform: scale(1.2);
}

.dot-red { background: #ff5f57; }
.dot-yellow { background: #ffbd2e; }
.dot-green { background: #28ca42; }

.window-title {
  flex: 1;
  text-align: center;
  color: rgba(255, 255, 255, 0.7);
  font-size: 0.9rem;
  font-weight: 500;
}

.window-content {
  position: relative;
}

.screenshot-container {
  position: relative;
  width: 100%;
  height: 450px;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
}

.screenshot {
  position: absolute;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  opacity: 0;
  transition: opacity 0.8s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding-top: 80px;
  color: white;
  text-shadow: 0 2px 10px rgba(0,0,0,0.7);
}

.screenshot.active {
  opacity: 1;
  z-index: 2; /* ‚Üë monte la slide active au-dessus des autres */
}



.screenshot img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  border-radius: 8px;
}

/* --- Affiche les ic√¥nes/texte par-dessus l'image --- */
.screenshot-placeholder {
  position: absolute;
  top: 40px; /* rapproche le titre du haut */
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  z-index: 2;
  color: #fff;
  text-shadow: 0 3px 10px rgba(0,0,0,0.8);
}

.screenshot-placeholder-icon {
  font-size: 3rem;
  color: #10b981; /* vert vif */
  margin-bottom: 10px;
  filter: drop-shadow(0 2px 6px rgba(0,0,0,0.6));
}

.screenshot::before {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(
    to bottom,
    rgba(0, 0, 0, 0.6) 0%,    /* assombrit le haut */
    rgba(0, 0, 0, 0.3) 40%,
    rgba(0, 0, 0, 0.15) 70%,
    rgba(0, 0, 0, 0) 100%
  );
  z-index: 1;
}

.screenshot-placeholder h3 {
  font-size: 1.8rem;
  color: #fff;
  margin-bottom: 8px;
  font-weight: 800;
  letter-spacing: -0.5px;
  text-shadow: 0 3px 10px rgba(0,0,0,0.8);
}


.screenshot-placeholder p {
  color: #e5e7eb;
  font-size: 1.1rem;
  text-shadow: 0 2px 8px rgba(0,0,0,0.6);
}

.navigation-dots {
  display: flex;
  justify-content: center;
  gap: 12px;
  margin: 10px;
}

.nav-dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background: var(--color-text-muted);
  opacity: 0.3;
  cursor: pointer;
  transition: all 0.3s ease;
}

.nav-dot.active {
  width: 30px;
  border-radius: 5px;
  background: var(--color-primary);
  opacity: 1;
}

.nav-dot:hover {
  opacity: 0.6;
  transform: scale(1.2);
}

/* ‚Äî‚Äî‚Äî Steps Grid ‚Äî‚Äî‚Äî */
.steps-grid {
  display: grid;
  gap: 30px;
  margin-top: 60px;
}

/* ‚Äî‚Äî‚Äî Step Number Badge ‚Äî‚Äî‚Äî */
.step-number {
  width: 60px;
  height: 60px;
  background: linear-gradient(135deg, var(--color-primary) 0%, #047857 100%);
  color: var(--color-white);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.8rem;
  font-weight: 800;
  flex-shrink: 0;
  box-shadow: 0 8px 20px rgba(5, 150, 105, 0.4);
  position: relative;
}

.step-number:after {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 2px solid var(--color-primary);
  animation: pulse-ring 2s infinite;
}

/* ‚Äî‚Äî‚Äî Browser Cards ‚Äî‚Äî‚Äî */
.browser-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 20px;
  margin-top: 24px;
}

.browser-card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 250, 252, 0.9) 100%);
  padding: 24px;
  border-radius: 12px;
  border: 2px solid var(--color-border);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  animation: slideIn 0.5s ease forwards;
  opacity: 0;
}

.browser-card:nth-child(1) { animation-delay: 0.1s; }
.browser-card:nth-child(2) { animation-delay: 0.2s; }

.browser-card:before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 4px;
  background: linear-gradient(90deg, var(--color-primary), var(--color-secondary));
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.browser-card:hover:before {
  transform: scaleX(1);
}

.browser-card:hover {
  transform: translateY(-5px);
  border-color: var(--color-primary);
  box-shadow: 0 12px 24px rgba(5, 150, 105, 0.15);
}

.browser-header {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 12px;
}

.browser-icon {
  font-size: 1.5rem;
}

.browser-card strong {
  color: var(--color-text-dark);
  font-size: 1.1rem;
  font-weight: 700;
}

.browser-steps {
  color: var(--color-text-medium);
  font-size: 0.95rem;
  line-height: 1.6;
}

.browser-steps code {
  background: rgba(5, 150, 105, 0.1);
  padding: 4px 8px;
  border-radius: 6px;
  font-size: 0.9rem;
  color: var(--color-primary);
  border: 1px solid rgba(5, 150, 105, 0.2);
  font-weight: 600;
  font-family: ui-monospace, 'SF Mono', monospace;
}

/* ‚Äî‚Äî‚Äî Token Section ‚Äî‚Äî‚Äî */
.token-section {
  background: linear-gradient(135deg, rgba(240, 253, 244, 0.9) 0%, rgba(236, 253, 245, 0.9) 100%);
  backdrop-filter: blur(10px);
  border: 2px solid var(--color-primary);
  border-radius: 16px;
  padding: 30px;
  margin-top: 24px;
  position: relative;
  overflow: hidden;
}

.token-section:before {
  content: '';
  position: absolute;
  font-size: 10rem;
  right: -30px;
  bottom: -30px;
  opacity: 0.05;
}

.token-header {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 20px;
}

.token-icon {
  font-size: 1.5rem;
  animation: float 3s ease-in-out infinite;
}

.token-label {
  font-size: 1.1rem;
  color: var(--color-text-dark);
  font-weight: 700;
}

.token-display {
  display: flex;
  align-items: center;
  gap: 12px;
  background: var(--color-white);
  padding: 20px;
  border-radius: 12px;
  border: 2px solid rgba(5, 150, 105, 0.2);
  transition: all 0.3s ease;
}

.token-display:hover {
  border-color: var(--color-primary);
  box-shadow: 0 4px 12px rgba(5, 150, 105, 0.15);
}

.token-value {
  flex: 1;
  font-family: ui-monospace, 'SF Mono', 'Cascadia Code', Menlo, monospace;
  font-size: 1.05rem;
  color: var(--color-text-medium);
  letter-spacing: 2px;
  user-select: all;
  font-weight: 600;
}

.token-value.masked {
  letter-spacing: 6px;
  color: var(--color-text-muted);
}

.token-actions {
  display: flex;
  gap: 10px;
}

.icon-btn {
  background: linear-gradient(135deg, var(--color-bg-light) 0%, var(--color-white) 100%);
  border: 2px solid var(--color-border);
  color: var(--color-text-medium);
  width: 44px;
  height: 44px;
  border-radius: 10px;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.1rem;
}

.icon-btn:hover {
  background: linear-gradient(135deg, var(--color-primary) 0%, #047857 100%);
  color: var(--color-white);
  border-color: var(--color-primary);
  transform: scale(1.1) rotate(5deg);
}

.icon-btn.success {
  background: linear-gradient(135deg, var(--color-success) 0%, #059669 100%);
  color: var(--color-white);
  border-color: var(--color-success);
  animation: success-pop 0.5s ease;
}

@keyframes success-pop {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.2); }
}

/* ‚Äî‚Äî‚Äî Alerts ‚Äî‚Äî‚Äî */
.alert {
  padding: 20px 24px;
  border-radius: 12px;
  margin-top: 20px;
  font-size: 1rem;
  display: flex;
  align-items: start;
  gap: 12px;
  animation: slideInUp 0.5s ease;
  line-height: 1.6;
}

.alert i {
  font-size: 1.2rem;
  flex-shrink: 0;
  margin-top: 2px;
}

.alert-info {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  border-left: 4px solid #3b82f6;
  color: #1e40af;
}

.alert-warning {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-left: 4px solid var(--color-accent);
  color: #92400e;
}

.alert strong {
  font-weight: 700;
}

/* ‚Äî‚Äî‚Äî Final Step ‚Äî‚Äî‚Äî */
.final-step {
  background: linear-gradient(135deg, rgba(240, 253, 244, 0.8) 0%, rgba(236, 253, 245, 0.8) 100%);
  border: 2px solid var(--color-primary);
  padding: 32px;
  border-radius: 16px;
  margin-top: 24px;
  position: relative;
  overflow: hidden;
}

.final-step:before {
  content: 'üéâ';
  position: absolute;
  font-size: 8rem;
  right: -20px;
  top: -20px;
  opacity: 0.1;
}

.final-step-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.final-step-list li {
  padding: 16px 0 16px 50px;
  position: relative;
  color: var(--color-text-medium);
  font-size: 1.1rem;
  line-height: 1.6;
  transition: all 0.3s ease;
}

.final-step-list li:hover {
  color: var(--color-text-dark);
  transform: translateX(10px);
}

.final-step-list li:before {
  content: "";
  position: absolute;
  left: 0;
  top: 16px;
  width: 32px;
  height: 32px;
  background: var(--color-primary);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 1rem;
  box-shadow: 0 4px 12px rgba(5, 150, 105, 0.3);
  font-family: "Font Awesome 6 Free";
  font-weight: 900;
}

.final-step-list li:nth-child(1):before { content: "\f00c"; }
.final-step-list li:nth-child(2):before { content: "\f00c"; }
.final-step-list li:nth-child(3):before { content: "\f00c"; }

/* ‚Äî‚Äî‚Äî Divider ‚Äî‚Äî‚Äî */
.hr {
  height: 1px;
  background: linear-gradient(90deg, transparent, var(--color-border), transparent);
  margin: 32px 0;
}

/* ‚Äî‚Äî‚Äî Toast Notifications ‚Äî‚Äî‚Äî */
.toast-wrap {
  position: fixed;
  right: 20px;
  bottom: 20px;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
  z-index: 1200;
}

.toast {
  background: white;
  border: 1px solid var(--color-border);
  border-left: 4px solid var(--color-success);
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  border-radius: 12px;
  padding: 16px 20px;
  min-width: 320px;
  color: var(--color-text-dark);
  display: flex;
  gap: var(--spacing-sm);
  align-items: center;
  animation: toastSlideIn 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  transition: opacity 0.3s ease;
}

@keyframes toastSlideIn {
  from {
    opacity: 0;
    transform: translateX(100%);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.toast.error {
  border-left-color: var(--color-danger-start);
}

.toast i {
  width: 28px;
  height: 28px;
  background: var(--color-success);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  font-size: 0.9rem;
}

.toast.error i {
  background: var(--color-danger-start);
}

.toast-content {
  flex: 1;
}

.toast .title {
  font-weight: 700;
  font-size: 0.95rem;
  margin-bottom: 2px;
}

.toast .msg {
  color: var(--color-text-medium);
  font-size: 0.9rem;
  line-height: 1.4;
}

/* ‚Äî‚Äî‚Äî Responsive ‚Äî‚Äî‚Äî */
@media (max-width: 768px) {
  .hero-section h1 {
    font-size: 2.5rem;
  }

  .hero-section .tagline {
    font-size: 1.1rem;
  }

  .demo-window {
    transform: none;
  }

  .window-content {
    padding: 20px;
  }

  .screenshot-container {
    height: 300px;
  }

  .browser-list {
    grid-template-columns: 1fr;
  }

  .token-display {
    flex-direction: column;
    align-items: stretch;
  }

  .token-actions {
    justify-content: stretch;
  }

  .icon-btn {
    flex: 1;
  }

  .card-header {
    flex-direction: column;
    align-items: flex-start;
  }

  .download-btn {
    padding: 16px 32px;
    font-size: 1rem;
  }
}
</style>
{% endblock %}

