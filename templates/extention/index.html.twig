<script>
  // ====== Token Management ======
  let isTokenVisible = false;

  function toggleToken() {
    const tokenElement = document.getElementById('tokenValue');
    const actualToken = tokenElement.getAttribute('data-token');
    const eyeIcon = event.currentTarget.querySelector('i');
    
    if (isTokenVisible) {
      tokenElement.textContent = '‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢';
      tokenElement.classList.add('masked');
      eyeIcon.className = 'fa-solid fa-eye';
    } else {
      tokenElement.textContent = actualToken;
      tokenElement.classList.remove('masked');
      eyeIcon.className = 'fa-solid fa-eye-slash';
    }
    
    isTokenVisible = !isTokenVisible;
  }

  function copyToken() {
    const tokenElement = document.getElementById('tokenValue');
    const actualToken = tokenElement.getAttribute('data-token');
    const copyBtn = event.currentTarget;
    const copyIcon = copyBtn.querySelector('i');
    
    navigator.clipboard.writeText(actualToken).then(() => {
      copyIcon.className = 'fa-solid fa-check';
      copyBtn.classList.add('success');
      
      showToast('Cl√© API copi√©e avec succ√®s !', 'success');
      
      setTimeout(() => {
        copyIcon.className = 'fa-solid fa-copy';
        copyBtn.classList.remove('success');
      }, 2000);
    }).catch(err => {
      console.error('Erreur de copie:', err);
      showToast('Erreur lors de la copie', 'error');
    });
  }

  // ====== Screenshot Carousel ======
  let currentStep = 1;
