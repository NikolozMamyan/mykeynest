<div class="toast-wrap" id="toastWrap"></div>

<script>
document.addEventListener('DOMContentLoaded', () => {
  // =========================================================
  // I18N (strings depuis data-* sur .token-section)
  // =========================================================
  const tokenSection = document.querySelector('.token-section');
  const i18n = {
    toastSuccessTitle: tokenSection?.dataset.toastSuccessTitle || 'Success',
    toastErrorTitle: tokenSection?.dataset.toastErrorTitle || 'Error',
    copySuccess: tokenSection?.dataset.toastCopySuccess || 'Copied!',
    copyError: tokenSection?.dataset.toastCopyError || 'Copy failed',
    simClose: tokenSection?.dataset.simClose || 'Simulated close',
    simMinimize: tokenSection?.dataset.simMinimize || 'Simulated minimize',
    simFullscreen: tokenSection?.dataset.simFullscreen || 'Simulated fullscreen'
  };

  // =========================================================
  // Toast Notifications
  // =========================================================
  function showToast(message, type = 'success') {
    const toastWrap = document.getElementById('toastWrap');
    if (!toastWrap) return;

    // Supprimer les anciens toasts
    toastWrap.querySelectorAll('.toast').forEach(t => t.remove());

    const toast = document.createElement('div');
    toast.className = `toast ${type}`;

    const icon = type === 'success'
      ? '<i class="fa-solid fa-check"></i>'
      : '<i class="fa-solid fa-xmark"></i>';

    const title = type === 'success' ? i18n.toastSuccessTitle : i18n.toastErrorTitle;

    toast.innerHTML = `
      ${icon}
      <div class="toast-content">
        <div class="title">${title}</div>
        <div class="msg">${message}</div>
      </div>
    `;

    toastWrap.appendChild(toast);

    setTimeout(() => {
      toast.style.opacity = '0';
      setTimeout(() => toast.remove(), 300);
    }, 3000);
  }

  // =========================================================
  // Token Management (Afficher/Masquer + Copier)
  // =========================================================
  let isTokenVisible = false;

  function toggleToken(button) {
    const tokenElement = document.getElementById('tokenValue');
    if (!tokenElement) return;

    const actualToken = tokenElement.getAttribute('data-token') || '';
    const eyeIcon = button?.querySelector('i');

    if (isTokenVisible) {
      tokenElement.textContent = '‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢';
      tokenElement.classList.add('masked');
      if (eyeIcon) eyeIcon.className = 'fa-solid fa-eye';
    } else {
      tokenElement.textContent = actualToken;
      tokenElement.classList.remove('masked');
      if (eyeIcon) eyeIcon.className = 'fa-solid fa-eye-slash';
    }

    isTokenVisible = !isTokenVisible;
  }

  function copyToken(button) {
    const tokenElement = document.getElementById('tokenValue');
    if (!tokenElement) return;

    const actualToken = tokenElement.getAttribute('data-token') || '';
    const copyIcon = button?.querySelector('i');

    if (!actualToken) {
      showToast(i18n.copyError, 'error');
      return;
    }

    navigator.clipboard.writeText(actualToken).then(() => {
      if (copyIcon) copyIcon.className = 'fa-solid fa-check';
      if (button) button.classList.add('success');

      showToast(i18n.copySuccess, 'success');

      setTimeout(() => {
        if (copyIcon) copyIcon.className = 'fa-solid fa-copy';
        if (button) button.classList.remove('success');
      }, 2000);
    }).catch(err => {
      console.error('Copy error:', err);
      showToast(i18n.copyError, 'error');
    });
  }

  // Bind buttons (tes boutons Twig doivent avoir ces classes)
  const toggleBtn = document.querySelector('.js-toggle-token');
  const copyBtn = document.querySelector('.js-copy-token');

  if (toggleBtn) {
    toggleBtn.addEventListener('click', function () {
      toggleToken(this);
    });
  }

  if (copyBtn) {
    copyBtn.addEventListener('click', function () {
      copyToken(this);
    });
  }

  // =========================================================
  // Screenshot Carousel
  // =========================================================
  let currentStep = 1;
  const totalSteps = 3;

  function showScreenshot(step) {
    document.querySelectorAll('.screenshot').forEach(s => s.classList.remove('active'));
    document.querySelector(`.screenshot[data-step="${step}"]`)?.classList.add('active');

    document.querySelectorAll('.nav-dot').forEach(d => d.classList.remove('active'));
    document.querySelector(`.nav-dot[data-step="${step}"]`)?.classList.add('active');

    currentStep = step;
  }

  // Navigation par clic sur les dots
  document.querySelectorAll('.nav-dot').forEach(dot => {
    dot.addEventListener('click', function () {
      const step = parseInt(this.getAttribute('data-step'), 10);
      if (!Number.isNaN(step)) showScreenshot(step);
    });
  });

  // Navigation automatique
  let autoPlayInterval = setInterval(() => {
    let nextStep = currentStep + 1;
    if (nextStep > totalSteps) nextStep = 1;
    showScreenshot(nextStep);
  }, 5000);

  // Pause au survol
  const demoWindow = document.querySelector('.demo-window');
  if (demoWindow) {
    demoWindow.addEventListener('mouseenter', () => clearInterval(autoPlayInterval));
    demoWindow.addEventListener('mouseleave', () => {
      autoPlayInterval = setInterval(() => {
        let nextStep = currentStep + 1;
        if (nextStep > totalSteps) nextStep = 1;
        showScreenshot(nextStep);
      }, 5000);
    });
  }

  // Navigation au clavier (optionnel : seulement si on n‚Äôest pas dans un input)
  document.addEventListener('keydown', (e) => {
    const tag = document.activeElement?.tagName?.toLowerCase();
    if (tag === 'input' || tag === 'textarea') return;

    if (e.key === 'ArrowLeft') {
      let prevStep = currentStep - 1;
      if (prevStep < 1) prevStep = totalSteps;
      showScreenshot(prevStep);
    } else if (e.key === 'ArrowRight') {
      let nextStep = currentStep + 1;
      if (nextStep > totalSteps) nextStep = 1;
      showScreenshot(nextStep);
    }
  });

  // =========================================================
  // Scroll Animations (IntersectionObserver)
  // =========================================================
  const observerOptions = { threshold: 0.1, rootMargin: '0px 0px -50px 0px' };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.opacity = '1';
        entry.target.style.transform = 'translateY(0)';
      }
    });
  }, observerOptions);

  document.querySelectorAll('.card').forEach(card => observer.observe(card));

  // =========================================================
  // Parallax Effect sur l‚Äôic√¥ne hero
  // =========================================================
  document.addEventListener('mousemove', (e) => {
    const heroIcon = document.querySelector('.hero-icon');
    if (heroIcon && window.innerWidth > 768) {
      const x = (e.clientX / window.innerWidth - 0.5) * 20;
      const y = (e.clientY / window.innerHeight - 0.5) * 20;
      heroIcon.style.transform = `translate(${x}px, ${y}px)`;
    }
  });

  // =========================================================
  // Window Dots Interaction (avec i18n)
  // =========================================================
  document.querySelectorAll('.window-dot').forEach(dot => {
    dot.addEventListener('click', function () {
      if (this.classList.contains('dot-red')) {
        showToast(i18n.simClose, 'error');
      } else if (this.classList.contains('dot-yellow')) {
        showToast(i18n.simMinimize, 'success');
      } else if (this.classList.contains('dot-green')) {
        showToast(i18n.simFullscreen, 'success');
      }
    });
  });

  // =========================================================
  // Smooth Scroll to Steps (optionnel, tu peux d√©commenter)
  // =========================================================
  const downloadBtn = document.querySelector('.download-btn');
  if (downloadBtn) {
    downloadBtn.addEventListener('click', function (e) {
      // Si tu veux un scroll vers les √©tapes au lieu du t√©l√©chargement:
      /*
      e.preventDefault();
      const stepsGrid = document.querySelector('.steps-grid');
      if (stepsGrid) {
        stepsGrid.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
      */
    });
  }

  // =========================================================
  // Browser Cards Animation Stagger
  // =========================================================
  document.querySelectorAll('.browser-card').forEach((card, index) => {
    card.style.animationDelay = `${index * 0.1}s`;
  });

  // =========================================================
  // Hover effect sur les items finaux
  // =========================================================
  document.querySelectorAll('.final-step-list li').forEach(item => {
    item.addEventListener('mouseenter', function () {
      this.style.paddingLeft = '60px';
    });
    item.addEventListener('mouseleave', function () {
      this.style.paddingLeft = '50px';
    });
  });
});
</script>
