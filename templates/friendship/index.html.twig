{% extends 'base.html.twig' %}

{% block title %}My Party{% endblock %}

{% block body %}
<style>

.pixel-title {
    font-family: 'Press Start 2P', cursive;
    font-size: 24px;
    margin-bottom: 20px;
    text-align: center;
    color: #fff;
    background: #222;
    padding: 10px;
    border: 2px solid #444;
    border-radius: 5px;
}

.panel {
    border: 2px solid #888;
    background: #111;
    color: #f2f2f2;
    padding: 20px;
    margin-bottom: 20px;
    border-radius: 4px;
    box-shadow: 0 0 8px #000;
}

.panel-title {
    font-family: 'Press Start 2P', cursive;
    font-size: 14px;
    margin-bottom: 10px;
}

.pixel-input {
    font-family: 'Press Start 2P', cursive;
    padding: 5px;
    font-size: 12px;
    width: 200px;
    background: #000;
    color: white;
    border: 2px solid white;
    height:20px;
    margin-bottom: 10px;
}

.pixel-list {
    list-style: none;
    padding-left: 0;
    font-family: monospace;
}

.pixel-message {
    margin-top: 10px;
    color: #ff0;
    font-size: 12px;
}

</style>
<h1 class="pixel-title">ðŸ‘¾ Your Party</h1>

<div class="friendship-container"
     data-controller="friendship"
     data-friendship-fetch-url="{{ path('api_friends_list') }}"
     data-friendship-pending-url="{{ path('api_pending_requests') }}"
>


    <div class="panel">
        <h2 class="panel-title"> Pending Friend Requests</h2>
        <ul data-friendship-target="pendingList" class="pixel-list">
            <li>Loading... <span class="spinner"></span></li>
        </ul>
    </div>

    <div class="panel">
        <h2 class="panel-title">Your Allies</h2>
        <ul data-friendship-target="friendList" class="pixel-list">
            <li>Loading... <span class="spinner"></span></li>
        </ul>
    </div>


    <div class="panel">
        <h2 class="panel-title">Send a Friend Request</h2>
        <input type="number" class="pixel-input" placeholder="Enter user ID"
               data-friendship-target="userIdInput" />
        <button class="pixel-button btn-pause" data-action="click->friendship#sendRequest">Send</button>

        <p data-friendship-target="statusMessage" class="pixel-message"></p>
    </div>
   <a href="{{ path('app_menu') }}" class="btn-outline-primary">Back to Menu</a>
</div>
{% endblock %}
