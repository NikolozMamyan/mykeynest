{% extends 'base.html.twig' %}

{% block title %}My Party{% endblock %}

{% block body %}
<style>
    :root {
        --primary-color: #6a16f2;
        --secondary-color: #16c6f2;
        --dark-bg: #121212;
        --panel-bg: #1e1e1e;
        --text-color: #f0f0f0;
        --accent-color: #ff9c00;
        --error-color: #ff4040;
        --success-color: #40ff40;
    }

    body {
        background-color: var(--dark-bg);
        color: var(--text-color);
        font-family: 'Roboto', sans-serif;
        padding: 0 15px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .pixel-title {
        font-family: 'Press Start 2P', cursive;
        font-size: 28px;
        text-align: center;
        color: var(--accent-color);
        margin: 30px 0;
        text-shadow: 2px 2px 0 rgba(0,0,0,0.5);
        position: relative;
        display: inline-block;
        left: 50%;
        transform: translateX(-50%);
    }

    .pixel-title::before {
        content: "";
        position: absolute;
        bottom: -10px;
        left: 0;
        width: 100%;
        height: 3px;
        background: linear-gradient(90deg, transparent, var(--primary-color), transparent);
    }

    .party-container {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
        margin-bottom: 40px;
    }

    @media (min-width: 768px) {
        .party-container {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (min-width: 992px) {
        .party-container {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    .panel {
        border: 2px solid var(--secondary-color);
        background: var(--panel-bg);
        color: var(--text-color);
        padding: 25px;
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .panel:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.4);
    }

    .panel-title {
        font-family: 'Press Start 2P', cursive;
        font-size: 16px;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid var(--primary-color);
        color: var(--secondary-color);
        display: flex;
        align-items: center;
    }

    .panel-title::before {
        content: "â–¶";
        margin-right: 10px;
        color: var(--accent-color);
    }

    .pixel-list {
        list-style: none;
        padding-left: 0;
        font-family: 'VT323', monospace;
        font-size: 18px;
    }

    .pixel-list li {
        padding: 10px;
        margin-bottom: 8px;
        border-radius: 4px;
        background-color: rgba(255,255,255,0.05);
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: background-color 0.2s;
    }

    .pixel-list li:hover {
        background-color: rgba(255,255,255,0.1);
    }

    .friend-actions {
        display: flex;
        gap: 8px;
    }

    .pixel-input {
        font-family: 'VT323', monospace;
        padding: 12px;
        font-size: 18px;
        width: 100%;
        background: rgba(0,0,0,0.2);
        color: var(--text-color);
        border: 2px solid var(--secondary-color);
        border-radius: 4px;
        margin-bottom: 15px;
        transition: border-color 0.3s;
    }

    .pixel-input:focus {
        border-color: var(--accent-color);
        outline: none;
        box-shadow: 0 0 0 3px rgba(255,156,0,0.3);
    }

    .pixel-button {
        font-family: 'Press Start 2P', cursive;
        padding: 12px 20px;
        font-size: 14px;
        background: var(--primary-color);
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: transform 0.1s, background-color 0.3s;
        box-shadow: 0 3px 0 rgba(0,0,0,0.3);
    }

    .pixel-button:hover {
        background: var(--secondary-color);
        transform: translateY(-2px);
    }

    .pixel-button:active {
        transform: translateY(1px);
        box-shadow: 0 1px 0 rgba(0,0,0,0.3);
    }

    .pixel-message {
        margin-top: 15px;
        padding: 10px;
        border-radius: 4px;
        font-family: 'VT323', monospace;
        font-size: 18px;
    }

    .pixel-message.success {
        background-color: rgba(64, 255, 64, 0.1);
        color: var(--success-color);
        border-left: 3px solid var(--success-color);
    }

    .pixel-message.error {
        background-color: rgba(255, 64, 64, 0.1);
        color: var(--error-color);
        border-left: 3px solid var(--error-color);
    }

    .spinner {
        display: inline-block;
        width: 20px;
        height: 20px;
        border: 3px solid rgba(255,255,255,.3);
        border-radius: 50%;
        border-top-color: var(--accent-color);
        animation: spin 1s ease-in-out infinite;
    }

    @keyframes spin {
        to { transform: rotate(360deg); }
    }


</style>

<h1 class="pixel-title">ðŸ‘¾ Your Party</h1>

<div class="friendship-container"
     data-controller="friendship"
     data-friendship-fetch-url="{{ path('api_friends_list') }}"
     data-friendship-pending-url="{{ path('api_pending_requests') }}"
>
    <div class="party-container">
        <div class="panel">
            <h2 class="panel-title">Pending Friend Requests</h2>
            <ul data-friendship-target="pendingList" class="pixel-list">
                <li>Loading... <span class="spinner"></span></li>
            </ul>
        </div>

        <div class="panel">
            <h2 class="panel-title">Your Allies</h2>
            <ul data-friendship-target="friendList" class="pixel-list">
                <li>Loading... <span class="spinner"></span></li>
            </ul>
        </div>

        <div class="panel">
            <h2 class="panel-title">Send a Friend Request</h2>
            <input type="number" class="pixel-input" placeholder="Enter user ID"
                data-friendship-target="userIdInput" />
            <button class="pixel-button" data-action="click->friendship#sendRequest">Send Request</button>
            <div data-friendship-target="statusMessage" class="pixel-message"></div>
        </div>
    </div>
    
{% include 'components/_menu_button.html.twig' with {
    'route_name': 'app_menu',
    'button_text': 'Back to Menu'
} %}
</div>
{% endblock %}