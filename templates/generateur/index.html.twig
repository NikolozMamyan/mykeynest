          <span class="mono" data-generator-target="output"></span>
          <div class="password-actions">
            <button
              class="btn btn-icon"
              title="{{ 'generator.copy'|trans }}"
              aria-label="{{ 'generator.copy'|trans }}"
              data-action="click->generator#copyPassword"
            >
              <i class="fa-solid fa-copy"></i>
            </button>

            <button class="btn btn-primary" data-action="click->generator#generatePassword">
              <i class="fa-solid fa-bolt"></i> {{ 'generator.generate'|trans }}
            </button>
          </div>
        </div>
      </div>

      <div class="hr"></div>

