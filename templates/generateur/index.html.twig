    <!-- ====== Generator ====== -->
  <section class="card">
    <div class="card-header">
      <div class="card-header-left">
        <div class="card-icon"><i class="fa-solid fa-key"></i></div>
        <div>
          <h1>{{ 'generator.title'|trans }}</h1>
          <div class="helper">{{ 'generator.subtitle'|trans }}</div>
        </div>
      </div>
    </div>

    <div class="card-body">
