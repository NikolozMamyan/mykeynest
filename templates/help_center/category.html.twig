        background: var(--color-white);
        border-bottom: 1px solid var(--color-border);
        padding: 0.875rem 2rem;
    }

    .cat-breadcrumb-inner {
        max-width: 1100px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .cat-breadcrumb a {
        font-size: 0.8125rem;
        color: var(--color-text-muted);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s;
        display: flex;
        align-items: center;
        gap: 0.3rem;
    }

    .cat-breadcrumb a:hover { color: var(--color-primary); }

    .cat-breadcrumb-sep {
        color: var(--color-text-light);
        font-size: 0.75rem;
    }

    .cat-breadcrumb-current {
        font-size: 0.8125rem;
        color: var(--color-text-dark);
        font-weight: 600;
    }

    /* â”€â”€ Hero â”€â”€ */
    .cat-hero {
        background: linear-gradient(135deg, #f0fdf4 0%, #ecfdf5 100%);
        border-bottom: 1px solid var(--color-border);
        padding: 3.5rem 2rem 3rem;
        position: relative;
        overflow: hidden;
    }

    .cat-hero::before {
        content: '';
        position: absolute;
        inset: 0;
        background:
            radial-gradient(circle at 10% 50%, rgba(5,150,105,0.09) 0%, transparent 55%),
            radial-gradient(circle at 85% 20%, rgba(16,185,129,0.06) 0%, transparent 50%);
        pointer-events: none;
    }

    .cat-hero-inner {
        max-width: 1100px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
        display: flex;
        align-items: center;
        gap: 2.5rem;
        flex-wrap: wrap;
    }

    .cat-hero-icon-wrap {
        width: 5rem;
        height: 5rem;
        background: var(--color-white);
        border: 2px solid rgba(5,150,105,0.2);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.25rem;
        box-shadow: var(--shadow-green);
        flex-shrink: 0;
        animation: iconPop 0.6s cubic-bezier(0.34,1.56,0.64,1) both;
    }

    @keyframes iconPop {
        from { opacity:0; transform: scale(0.5) rotate(-10deg); }
        to   { opacity:1; transform: scale(1) rotate(0deg); }
    }

    .cat-hero-text { flex: 1; min-width: 240px; }

    .cat-hero-label {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--color-primary);
        margin-bottom: 0.625rem;
        animation: fadeUp 0.5s ease-out 0.1s both;
    }

    .cat-hero h1 {
        font-size: clamp(1.75rem, 3.5vw, 2.75rem);
        font-weight: 700;
        color: var(--color-text-dark);
        margin-bottom: 0.75rem;
        line-height: 1.2;
        animation: fadeUp 0.5s ease-out 0.2s both;
    }

    .cat-hero-desc {
        font-size: 1.0625rem;
        color: var(--color-text-medium);
        line-height: 1.65;
        max-width: 560px;
        animation: fadeUp 0.5s ease-out 0.3s both;
    }

    .cat-hero-meta {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        margin-top: 1.25rem;
        animation: fadeUp 0.5s ease-out 0.4s both;
        flex-wrap: wrap;
    }

    .cat-hero-pill {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        background: var(--color-white);
        border: 1px solid var(--color-border);
        border-radius: 2rem;
        padding: 0.3rem 0.875rem;
        font-size: 0.8125rem;
        font-weight: 600;
        color: var(--color-text-medium);
    }

    .cat-hero-pill .dot {
        width: 6px;
        height: 6px;
        background: var(--color-primary);
        border-radius: 50%;
    }

    @keyframes fadeUp {
        from { opacity:0; transform:translateY(18px); }
        to   { opacity:1; transform:translateY(0); }
    }

    /* â”€â”€ Layout â”€â”€ */
    .cat-layout {
        max-width: 1100px;
        margin: 0 auto;
        padding: 2.5rem 2rem 5rem;
        display: grid;
        grid-template-columns: 1fr 280px;
        gap: 2.5rem;
        align-items: start;
    }

    /* â”€â”€ Filter Bar â”€â”€ */
    .cat-filter-bar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        margin-bottom: 1.5rem;
        flex-wrap: wrap;
    }

    .cat-filter-pills {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .cat-filter-pill {
        padding: 0.4rem 1rem;
        border-radius: 2rem;
        font-size: 0.8125rem;
        font-weight: 600;
        cursor: pointer;
        border: 1.5px solid var(--color-border);
        background: var(--color-white);
        color: var(--color-text-medium);
        transition: all 0.2s;
        user-select: none;
    }

    .cat-filter-pill:hover,
    .cat-filter-pill.active {
        background: var(--color-primary);
        border-color: var(--color-primary);
        color: white;
    }

    .cat-sort-select {
        padding: 0.4rem 0.875rem;
        border: 1.5px solid var(--color-border);
        border-radius: var(--border-radius-sm);
        font-family: 'DM Sans', sans-serif;
        font-size: 0.8125rem;
        font-weight: 500;
        color: var(--color-text-medium);
        background: var(--color-white);
        cursor: pointer;
        outline: none;
        transition: border-color 0.2s;
    }

    .cat-sort-select:focus { border-color: var(--color-primary); }

    /* â”€â”€ Article Cards â”€â”€ */
    .cat-articles { display: flex; flex-direction: column; gap: 0.875rem; }

    .cat-article-card {
        background: var(--color-white);
        border: 1.5px solid var(--color-border);
        border-radius: var(--border-radius);
        padding: 1.5rem 1.75rem;
        text-decoration: none;
        display: flex;
        gap: 1.25rem;
        align-items: flex-start;
        transition: all 0.28s cubic-bezier(0.4,0,0.2,1);
        position: relative;
        overflow: hidden;
        animation: cardIn 0.5s ease-out both;
    }

    .cat-article-card:nth-child(1) { animation-delay: 0.05s; }
    .cat-article-card:nth-child(2) { animation-delay: 0.1s; }
    .cat-article-card:nth-child(3) { animation-delay: 0.15s; }
    .cat-article-card:nth-child(4) { animation-delay: 0.2s; }
    .cat-article-card:nth-child(5) { animation-delay: 0.25s; }
    .cat-article-card:nth-child(n+6) { animation-delay: 0.3s; }

    @keyframes cardIn {
        from { opacity:0; transform: translateY(12px); }
        to   { opacity:1; transform: translateY(0); }
    }

    .cat-article-card::before {
        content:'';
        position:absolute;
        left:0; top:0; bottom:0;
        width:3px;
        background: linear-gradient(180deg, var(--color-primary), #10b981);
        transform: scaleY(0);
        transition: transform 0.28s ease;
        transform-origin: bottom;
    }

    .cat-article-card:hover {
        border-color: var(--color-primary);
        transform: translateX(4px);
        box-shadow: var(--shadow-lg);
    }

    .cat-article-card:hover::before { transform: scaleY(1); }

    .cat-article-idx {
        font-family: 'Space Mono', monospace;
        font-size: 0.6875rem;
        font-weight: 700;
        color: var(--color-primary);
        background: #f0fdf4;
        border-radius: 50%;
        width: 2.25rem;
        height: 2.25rem;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        margin-top: 2px;
    }

    .cat-article-body { flex: 1; min-width: 0; }

    .cat-article-tags {
        display: flex;
        gap: 0.4rem;
        flex-wrap: wrap;
        margin-bottom: 0.5rem;
    }

    .cat-tag {
        font-size: 0.6875rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--color-primary);
        background: #f0fdf4;
        border: 1px solid rgba(5,150,105,0.2);
        padding: 0.15rem 0.5rem;
        border-radius: 2rem;
    }

    .cat-tag-popular {
        color: #b45309;
        background: #fffbeb;
        border-color: rgba(180,83,9,0.2);
    }

    .cat-article-title {
        font-size: 1.0625rem;
        font-weight: 700;
        color: var(--color-text-dark);
        margin-bottom: 0.4rem;
        line-height: 1.35;
        transition: color 0.2s;
    }

    .cat-article-card:hover .cat-article-title { color: var(--color-primary); }

    .cat-article-excerpt {
        font-size: 0.875rem;
        color: var(--color-text-medium);
        line-height: 1.6;
        margin-bottom: 0.875rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .cat-article-footer {
        display: flex;
        align-items: center;
        gap: 1rem;
        font-size: 0.75rem;
        color: var(--color-text-muted);
    }

    .cat-article-footer-item {
        display: flex;
        align-items: center;
        gap: 0.3rem;
    }

    .cat-article-footer-item svg {
        width: 0.875rem;
        height: 0.875rem;
    }

    .cat-article-arrow {
        width: 1.125rem;
        height: 1.125rem;
        color: var(--color-text-light);
        flex-shrink: 0;
        align-self: center;
        transition: all 0.25s;
    }

    .cat-article-card:hover .cat-article-arrow {
        color: var(--color-primary);
        transform: translateX(4px);
    }

    /* â”€â”€ Sidebar â”€â”€ */
    .cat-sidebar { position: sticky; top: 1.5rem; display: flex; flex-direction: column; gap: 1.25rem; }

    .cat-sidebar-card {
        background: var(--color-white);
        border: 1.5px solid var(--color-border);
        border-radius: var(--border-radius);
        padding: 1.5rem;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

    .cat-sidebar-card:hover { border-color: rgba(5,150,105,0.3); box-shadow: var(--shadow-green); }

    .cat-sidebar-title {
        font-size: 0.8125rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.07em;
        color: var(--color-primary);
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }

    .cat-sidebar-link {
        display: flex;
        align-items: center;
        gap: 0.625rem;
        padding: 0.6rem 0;
        border-bottom: 1px solid var(--color-border);
        text-decoration: none;
        color: var(--color-text-dark);
        font-size: 0.875rem;
        font-weight: 500;
        transition: all 0.2s;
    }

    .cat-sidebar-link:last-child { border-bottom: none; padding-bottom: 0; }
    .cat-sidebar-link:first-of-type { padding-top: 0; }

    .cat-sidebar-link:hover { color: var(--color-primary); padding-left: 4px; }

    .cat-sidebar-link-icon {
        width: 1.75rem;
        height: 1.75rem;
        background: #f0fdf4;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        font-size: 0.875rem;
    }

    /* Other categories */
    .cat-other-grid {
        display: flex;
        flex-direction: column;
        gap: 0;
    }

    /* Search in sidebar */
    .cat-sidebar-search {
        position: relative;
    }

    .cat-sidebar-search input {
        width: 100%;
        padding: 0.625rem 0.875rem 0.625rem 2.375rem;
        border: 1.5px solid var(--color-border);
        border-radius: var(--border-radius-sm);
        font-family: 'DM Sans', sans-serif;
        font-size: 0.875rem;
        background: var(--color-bg-light);
        color: var(--color-text-dark);
        outline: none;
        transition: border-color 0.2s;
    }

    .cat-sidebar-search input:focus { border-color: var(--color-primary); background: var(--color-white); }

    .cat-sidebar-search svg {
        position: absolute;
        left: 0.75rem;
        top: 50%;
        transform: translateY(-50%);
        width: 1rem;
        height: 1rem;
        color: var(--color-text-light);
        pointer-events: none;
    }

    /* Contact card */
    .cat-sidebar-contact {
        background: linear-gradient(135deg, #f0fdf4, #ecfdf5);
        border-color: rgba(5,150,105,0.2);
        text-align: center;
    }

    .cat-sidebar-contact-icon {
        width: 3rem;
        height: 3rem;
        background: linear-gradient(135deg, var(--color-primary), #10b981);
        border-radius: var(--border-radius-sm);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
    }

    .cat-sidebar-contact-icon svg { width: 1.25rem; height: 1.25rem; color: white; }

    .cat-sidebar-contact h3 {
        font-size: 0.9375rem;
        font-weight: 700;
        color: var(--color-text-dark);
        margin-bottom: 0.4rem;
    }

    .cat-sidebar-contact p {
        font-size: 0.8125rem;
        color: var(--color-text-medium);
        line-height: 1.55;
        margin-bottom: 1rem;
    }

    .cat-contact-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.6rem 1.25rem;
        background: linear-gradient(135deg, var(--color-primary), #10b981);
        color: white;
        border-radius: var(--border-radius-sm);
        font-size: 0.8125rem;
        font-weight: 700;
        text-decoration: none;
