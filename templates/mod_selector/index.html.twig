{% extends 'base.html.twig' %}

{% block title %}S√©lection du mode de jeu{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=VT323&display=swap" rel="stylesheet">
{% endblock %}

{% block body %}
<style>

/* game-select.css */
.game-select-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px 15px;
}

.game-select-title {
    font-family: 'Press Start 2P', cursive;
    font-size: 28px;
    text-align: center;
    color: #ff9c00;
    margin: 30px 0;
    text-shadow: 2px 2px 0 rgba(0,0,0,0.5);
    position: relative;
    display: inline-block;
    left: 50%;
    transform: translateX(-50%);
}

.game-select-title::before {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, transparent, #6a16f2, transparent);
}

.character-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 25px;
    margin: 40px 0;
}

.character-card {
    background: #1e1e1e;
    border: 2px solid #16c6f2;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    transition: transform 0.3s, box-shadow 0.3s;
}

.character-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 25px rgba(0,0,0,0.4), 0 0 15px rgba(22, 198, 242, 0.3);
}

.character-header {
    background: rgba(0,0,0,0.3);
    padding: 15px;
    border-bottom: 2px solid #6a16f2;
    text-align: center;
}

.character-name {
    font-family: 'Press Start 2P', cursive;
    font-size: 16px;
    color: #f0f0f0;
    margin: 0 0 8px 0;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.8);
}

.character-class {
    font-family: 'VT323', monospace;
    font-size: 18px;
    color: #16c6f2;
    background: rgba(0,0,0,0.2);
    padding: 4px 12px;
    border-radius: 12px;
    display: inline-block;
}

.character-image-container-selector {
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    background: radial-gradient(circle, rgba(106, 22, 242, 0.1) 0%, rgba(22, 198, 242, 0.05) 100%);
}

.character-image-selector {
    max-width: 100%;
    max-height: 160px;
    object-fit: contain;
    image-rendering: pixelated;
    filter: drop-shadow(0 0 10px rgba(106, 22, 242, 0.5));
    animation: char-float 3s ease-in-out infinite;
}

.character-placeholder {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: linear-gradient(135deg, #6a16f2, #16c6f2);
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Press Start 2P', cursive;
    font-size: 48px;
    color: #fff;
    text-shadow: 2px 2px 0 rgba(0,0,0,0.5);
}

@keyframes char-float {
    0% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-10px) rotate(2deg); }
    100% { transform: translateY(0px) rotate(0deg); }
}

.battle-actions {
    display: flex;
    flex-direction: column;
    padding: 15px;
    gap: 10px;
}

.battle-button {
    font-family: 'Press Start 2P', cursive;
    font-size: 12px;
    padding: 12px;
    border-radius: 4px;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    text-align: center;
    box-shadow: 0 3px 0 rgba(0,0,0,0.3);
}

.battle-bot {
    background: #6a16f2;
    color: white;
    border: none;
}

.battle-bot:hover {
    background: #7d30ff;
    transform: translateY(-3px);
    box-shadow: 0 6px 0 rgba(0,0,0,0.3);
}

.battle-friend {
    background: transparent;
    color: #ff9c00;
    border: 2px solid #ff9c00;
}

.battle-friend:hover {
    background: rgba(255, 156, 0, 0.1);
    transform: translateY(-3px);
    box-shadow: 0 6px 0 rgba(0,0,0,0.3);
}

.battle-icon {
    margin-right: 8px;
    font-size: 16px;
}

.battle-text {
    flex-grow: 1;
}

@media (max-width: 768px) {
    .character-grid {
        grid-template-columns: 1fr;
    }
    
    .battle-button {
        padding: 10px;
        font-size: 10px;
    }
}
</style>
    <div class="game-select-container">
        <h1 class="game-select-title">üëæ S√©lection du personnage</h1>
        
        <div class="character-grid">
            {% for char in characters %}
                <div class="character-card">
                    <div class="character-header">
                        <h2 class="character-name">{{ char.name }}</h2>
                        <span class="character-class">{{ char.heroClass }}</span>
                    </div>

                    <div class="character-image-container-selector">
                        {% if char.image is defined and char.image %}
                            <img src="{{ asset(char.image) }}" alt="{{ char.name }}" class="character-image-selector">
                        {% else %}
                            <div class="character-placeholder">{{ char.name|slice(0, 1)|upper }}</div>
                        {% endif %}
                    </div>
                    
                    <div class="battle-actions">
                        <a href="{{ path('battle_init', { id: char.id }) }}" class="battle-button battle-bot">
                            <span class="battle-icon">‚öîÔ∏è</span>
                            <span class="battle-text">Combattre un Bot</span>
                        </a>
                        <a href="{{ path('battle_faceoff_select', { id: char.id }) }}" class="battle-button battle-friend">
                            <span class="battle-icon">ü§ù</span>
                            <span class="battle-text">Combattre un Ami</span>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
        
        {% include 'components/_menu_button.html.twig' with {
            'route_name': 'app_menu',
            'button_text': 'Back to Menu'
        } %}
    </div>
{% endblock %}