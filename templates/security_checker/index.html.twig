}

/* --- Amélioration visuelle du résumé --- */
.d-flex.flex-wrap.gap-2 {
  position: relative;
  padding: 4px 0;
}

.d-flex.flex-wrap.gap-2::before {
  content: '';
  position: absolute;
  left: -12px;
  top: 0;
  bottom: 0;
  width: 3px;
  background: linear-gradient(180deg, var(--color-primary), #10b981, transparent);
  border-radius: 10px;
}

