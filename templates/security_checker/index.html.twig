  <script>
// Fonction pour copier le mot de passe
function copyPassword(elementId, button = null) {
  const passwordElement = document.getElementById(elementId);
  const password = passwordElement ? passwordElement.textContent : '';

  if (!password) {
    showToast("Mot de passe introuvable", "error");
    return;
  }

  navigator.clipboard.writeText(password).then(() => {
    showToast('Mot de passe copié !');

    // Animation du bouton uniquement si on a le bouton
    if (button) {
      const icon = button.querySelector('i');
      if (icon) {
icon.classList.remove('fa-copy', 'far');
icon.classList.add('fa-check', 'fas');

      }
      button.style.color = 'var(--color-primary)';

      setTimeout(() => {
        if (icon) {
icon.classList.remove('fa-check', 'fas');
icon.classList.add('fa-copy', 'far');
        }
        button.style.color = '';
      }, 2000);
    }
  }).catch(err => {
    console.error('Erreur lors de la copie:', err);
    showToast('Erreur lors de la copie', 'error');
  });
}


// Fonction pour afficher le toast
function showToast(message, type = 'success') {
  // Supprimer les anciens toasts
  const existingToast = document.querySelector('.toast-notification');
  if (existingToast) {
    existingToast.remove();
  }
  
  // Créer le nouveau toast
  const toast = document.createElement('div');
  toast.className = 'toast-notification';
  toast.textContent = message;
  
  // Ajouter au DOM
  document.body.appendChild(toast);
  
  // Supprimer après 3 secondes
  setTimeout(() => {
    toast.remove();
  }, 3000);
}

// Optionnel : Raccourci clavier Ctrl+C sur le mot de passe
document.addEventListener('DOMContentLoaded', () => {
  document.querySelectorAll('.password-text').forEach((element, index) => {
    element.addEventListener('click', () => {
      copyPassword(element.id);
    });
  });
});
</script>

