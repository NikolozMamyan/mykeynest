    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <div class="h6 text-muted">Score global</div>
          <div class="display-6">{{ report.overallScore }}/100</div>
          <div class="text-muted">Basé sur les mots de passe déchiffrables</div>
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <div class="h6 text-muted">Résumé</div>
          <div class="d-flex flex-wrap gap-2">
            <span class="badge bg-secondary">Total: {{ report.counts.total }}</span>
            <span class="badge bg-danger">Faibles: {{ report.counts.weak }}</span>
            <span class="badge bg-warning text-dark">Réutilisés: {{ report.counts.reused }}</span>
            <span class="badge bg-info text-dark">À renouveler (+{{ rotationDays }}j): {{ report.counts.expired }}</span>
            <span class="badge bg-dark">Indéchiffrables: {{ report.counts.undecipherable }}</span>
          </div>
          <div class="mt-2 text-muted small">
            Règle rotation : recommande de changer tous les {{ rotationDays }} jours (~4 mois).
          </div>
        </div>
      </div>
    </div>
  </div>


      <h2 class="h5 mb-3">Détails par accès</h2>

 <div class="table-responsive">
  <table class="table align-middle">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Domaine</th>
        <th>Utilisateur</th>
        <th>Dernier changement</th>
        <th>Score</th>
        <th>Problèmes</th>
        <th>Recommandations</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
    {% for item in report.items %}
      <tr>
        <td class="fw-semibold">{{ item.name }}</td>
        <td>{{ item.domain }}</td>
        <td>{{ item.username }}</td>

        <td>
          {% if item.lastChangedAt %}
            {{ item.lastChangedAt|date('Y-m-d') }}
            <div class="text-muted small">
              {% if item.ageDays is not null %}{{ item.ageDays }} jours{% endif %}
              {% if item.rotationDue %}<span class="badge bg-info text-dark ms-1">à renouveler</span>{% endif %}
            </div>
          {% else %}
            —
          {% endif %}
        </td>

        <td>
          <div class="fw-semibold">{{ item.score }}/100</div>
          <span class="badge
            {% if item.label == 'Fort' %}bg-success
            {% elseif item.label == 'Bon' %}bg-primary
            {% elseif item.label == 'Moyen' %}bg-warning text-dark
            {% elseif item.label == 'Faible' %}bg-danger
            {% else %}bg-secondary{% endif %}
          ">
            {{ item.label }}
          </span>
        </td>

        <td>
          {% if item.issues is empty %}
            <span class="text-muted">Aucun</span>
          {% else %}
            <ul class="mb-0">
              {% for i in item.issues %}
                <li>{{ i }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        </td>

        <td>
          {% if item.recommendations is empty %}
            <span class="text-muted">—</span>
          {% else %}
            <ul class="mb-0">
              {% for r in item.recommendations %}
                <li>{{ r }}</li>
              {% endfor %}
            </ul>

            {% if item.suggestedPassword %}
              <div class="mt-2 small">
                <span class="text-muted">Suggestion (générée):</span>
                <code>{{ item.suggestedPassword }}</code>
              </div>
            {# <a href="#" class="btn btn-sm btn-outline-primary">Voir</a> #}
            {% endif %}
          {% endif %}
        </td>


      </tr>
    {% endfor %}
    </tbody>
  </table>
</div>





{% endblock %}
