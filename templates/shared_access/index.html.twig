{% extends 'base.html.twig' %}

{% block title %}Identifiants partagés{% endblock %}

{% block body %}

  <!-- Hero Section -->
  <div class="hero-section">
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">Gestion des accès partagés</h1>
        <p class="hero-subtitle">Partagez vos identifiants en toute sécurité et gérez les accès en temps réel.</p>
      </div>
      <a href="{{ path('shared_access_new') }}" class="btn-primary">
        <i class="fas fa-share-alt"></i>
        <span>Nouveau partage</span>
      </a>
    </div>
  </div>

  <!-- Alerts -->
  <div class="alerts-container">
    {% for message in app.flashes('success') %}
      <div class="alert alert-success">
        <div class="alert-icon">
          <i class="fas fa-check-circle"></i>
        </div>
        <span class="alert-message">{{ message }}</span>
        <button class="alert-close"><i class="fas fa-times"></i></button>
      </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
      <div class="alert alert-danger">
        <div class="alert-icon">
          <i class="fas fa-exclamation-circle"></i>
        </div>
        <span class="alert-message">{{ message }}</span>
        <button class="alert-close"><i class="fas fa-times"></i></button>
      </div>
    {% endfor %}
  </div>

  <!-- Tabs -->
  <div class="tabs-wrapper">
    <div class="tabs-header">
      <button class="tab-btn active" data-tab="shared-by-me">
        <i class="fas fa-share-alt"></i>
        <span>Partagés par moi</span>
        <span class="tab-badge">{{ sharedByMe|length }}</span>
      </button>
      <button class="tab-btn" data-tab="shared-with-me">
        <i class="fas fa-inbox"></i>
        <span>Partagés avec moi</span>
        <span class="tab-badge">{{ sharedWithMe|length }}</span>
      </button>
    </div>
    
    <!-- Tab Content: Shared by me -->
    <div id="shared-by-me" class="tab-panel active">
      {% if sharedByMe is empty %}
        <div class="empty-state">
          <div class="empty-illustration">
            <div class="empty-icon-wrapper">
              <i class="fas fa-share-alt"></i>
            </div>
          </div>
          <h3 class="empty-title">Aucun partage effectué</h3>
          <p class="empty-description">Commencez à partager vos identifiants avec d'autres utilisateurs de manière sécurisée.</p>
          <a href="{{ path('shared_access_new') }}" class="btn-primary-outline">
            <i class="fas fa-plus"></i>
            <span>Créer mon premier partage</span>
          </a>
        </div>
      {% else %}
        <div class="access-grid">
          {% for access in sharedByMe %}
            <div class="access-card">
              <div class="card-content">
                <!-- Header -->
                <div class="card-top">
                  <div class="credential-avatar color-{{ loop.index % 5 }}">
                    <span>{{ access.credential.name|first|upper }}</span>
                  </div>
                  <div class="credential-details">
                    <h3 class="credential-title">{{ access.credential.name }}</h3>
                    <div class="credential-meta">
                      <i class="fas fa-globe"></i>
                      <span>{{ access.credential.domain }}</span>
                    </div>
                  </div>
                </div>

                <!-- Body -->
                <div class="card-body">
                  <div class="info-row">
                    <span class="info-label">Partagé avec</span>
                    <div class="user-badge">
                      <div class="user-avatar-sm color-{{ (loop.index * 3) % 5 }}">
                        {{ access.guest.email|first|upper }}
                      </div>
                      <div class="user-details">
                        <span class="user-name">{{ access.guest.company }}</span>
                        <span class="user-email">{{ access.guest.email }}</span>
                      </div>
                    </div>
                  </div>
                  
                  <div class="info-row">
                    <span class="info-label">Date de partage</span>
                    <div class="date-badge">
                      <i class="far fa-calendar-alt"></i>
                      <span>{{ access.createdAt|date('d/m/Y') }}</span>
                    </div>
                  </div>
                </div>

                <!-- Footer -->
                <div class="card-footer">
                  <form method="post" action="{{ path('shared_access_revoke', {'id': access.id}) }}" class="revoke-form">
                    <input type="hidden" name="_token" value="{{ csrf_token('revoke' ~ access.id) }}">
                    <button type="button" class="btn-danger revoke-btn" data-id="{{ access.id }}">
                      <i class="fas fa-user-slash"></i>
                      <span>Révoquer l'accès</span>
                    </button>
                  </form>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
    
    <!-- Tab Content: Shared with me -->
    <div id="shared-with-me" class="tab-panel">
      {% if sharedWithMe is empty %}
        <div class="empty-state">
          <div class="empty-illustration">
            <div class="empty-icon-wrapper">
              <i class="fas fa-inbox"></i>
            </div>
          </div>
          <h3 class="empty-title">Aucun identifiant reçu</h3>
          <p class="empty-description">Vous n'avez pas encore reçu d'identifiants partagés par d'autres utilisateurs.</p>
        </div>
      {% else %}
        <div class="access-grid">
          {% for access in sharedWithMe %}
            <div class="access-card">
              <div class="card-content">
                <!-- Header -->
                <div class="card-top">
                  <div class="credential-avatar color-{{ loop.index % 5 }}">
                    <span>{{ access.credential.name|first|upper }}</span>
                  </div>
                  <div class="credential-details">
                    <h3 class="credential-title">{{ access.credential.name }}</h3>
                    <div class="credential-meta">
                      <i class="fas fa-globe"></i>
                      <span>{{ access.credential.domain }}</span>
                    </div>
                  </div>
                </div>

                <!-- Body -->
                <div class="card-body">
                  <div class="info-row">
                    <span class="info-label">Partagé par</span>
                    <div class="user-badge">
                      <div class="user-avatar-sm color-{{ (loop.index * 3) % 5 }}">
                        {{ access.owner.email|first|upper }}
                      </div>
                      <div class="user-details">
                        <span class="user-name">{{ access.owner.company }}</span>
                        <span class="user-email">{{ access.owner.email }}</span>
                      </div>
                    </div>
                  </div>
                  
                  <div class="info-row">
                    <span class="info-label">Date de partage</span>
                    <div class="date-badge">
                      <i class="far fa-calendar-alt"></i>
                      <span>{{ access.createdAt|date('d/m/Y') }}</span>
                    </div>
                  </div>
                </div>

                <!-- Footer -->
                <div class="card-footer">
                  <a href="{{ path('shared_access_view_credential', {'id': access.id}) }}" class="btn-view">
                    <i class="fas fa-key"></i>
                    <span>Voir les identifiants</span>
                  </a>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>


<!-- Revoke Modal -->
<div id="revoke-modal" class="modal">
  <div class="modal-overlay"></div>
  <div class="modal-dialog">
    <div class="modal-header">
      <h3 class="modal-title">Confirmer la révocation</h3>
      <button class="modal-close">
        <i class="fas fa-times"></i>
      </button>
    </div>
    <div class="modal-body">
      <div class="warning-box">
        <i class="fas fa-exclamation-triangle"></i>
        <div>
          <p class="warning-title">Attention : Action irréversible</p>
          <p class="warning-text">Êtes-vous sûr de vouloir révoquer cet accès partagé ? L'utilisateur perdra immédiatement l'accès à ces identifiants.</p>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button id="cancel-revoke" class="btn-secondary">Annuler</button>
      <button id="confirm-revoke" class="btn-danger-confirm">
        <i class="fas fa-user-slash"></i>
        <span>Confirmer la révocation</span>
      </button>
    </div>
  </div>
</div>

<style>



