    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: none;
    border: none;
    color: var(--color-text-muted);
    cursor: pointer;
    border-radius: var(--border-radius-sm);
    transition: all 0.2s ease;
  }

  .modal-close:hover {
    background: var(--color-bg-hover);
    color: var(--color-text-dark);
  }

  .modal-body {
    padding: 1.5rem;
  }

  .warning-box {
    display: flex;
    gap: 1rem;
    padding: 1.25rem;
    background: linear-gradient(135deg, #fef2f2, #fee2e2);
    border-left: 4px solid var(--color-danger-start);
    border-radius: var(--border-radius-sm);
  }

  .warning-box i {
    font-size: 1.5rem;
    color: var(--color-danger-start);
    flex-shrink: 0;
  }

  .warning-title {
    font-weight: 700;
    color: var(--color-text-dark);
    margin: 0 0 0.5rem 0;
    font-size: 0.9375rem;
  }

  .warning-text {
    color: var(--color-text-medium);
    margin: 0;
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .modal-footer {
    display: flex;
    justify-content: flex-end;
    gap: 0.75rem;
    padding: 1.25rem 1.5rem;
