    border-radius: var(--border-radius-sm);
    font-weight: 600;
    font-size: 0.9375rem;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .btn-danger-confirm:hover {
    background: linear-gradient(135deg, var(--color-danger-end), #b91c1c);
  }

  /* Alerts */
  .alerts-container {
    margin-bottom: 1.5rem;
  }

  .alert {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    border-radius: var(--border-radius-sm);
    margin-bottom: 1rem;
