    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--color-primary);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .tab-btn:hover {
    color: var(--color-text-dark);
    background: var(--color-white);
  }

  .tab-btn.active {
    color: var(--color-primary);
    background: var(--color-white);
  }

  .tab-btn.active::after {
    transform: scaleX(1);
  }

  .tab-badge {
    background: var(--color-primary);
    color: var(--color-white);
    padding: 0.25rem 0.625rem;
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 700;
    min-width: 1.75rem;
    text-align: center;
  }

  .tab-btn:not(.active) .tab-badge {
    background: var(--color-text-light);
  }

  .tab-panel {
    display: none;
    padding: 2rem;
    animation: fadeIn 0.4s ease;
  }

  .tab-panel.active {
    display: block;
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
  }

  .empty-illustration {
    margin-bottom: 2rem;
  }

  .empty-icon-wrapper {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 120px;
    height: 120px;
    background: var(--background-gradient);
    border-radius: 50%;
    font-size: 3rem;
    color: var(--color-primary);
    box-shadow: var(--shadow-md);
  }

  .empty-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin: 0 0 0.75rem 0;
  }

  .empty-description {
    font-size: 1rem;
    color: var(--color-text-medium);
    margin: 0 0 2rem 0;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Access Grid */
  .access-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
    gap: 1.5rem;
  }

  /* Access Card */
  .access-card {
    background: var(--color-white);
    border-radius: var(--border-radius);
    border: 1px solid var(--color-border);
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .access-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-primary);
  }

  .card-content {
    display: flex;
    flex-direction: column;
  }

  .card-top {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: linear-gradient(135deg, var(--color-bg-light), var(--color-white));
    border-bottom: 1px solid var(--color-border);
  }

  .credential-avatar {
