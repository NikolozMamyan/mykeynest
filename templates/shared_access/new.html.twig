{% extends 'base.html.twig' %}

{% block title %}Partager des identifiants{% endblock %}

{% block body %}
<link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@300;400;500;600;700&family=DM+Mono:wght@400;500&display=swap" rel="stylesheet">

<div class="share-page">

  {# Back button #}
  <a href="{{ path('shared_access_index') }}" class="back-link">
    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
    Retour
  </a>

  {# Flash errors #}
  {% for message in app.flashes('error') %}
    <div class="toast toast-error" role="alert">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
      <span>{{ message }}</span>
      <button onclick="this.parentElement.remove()" aria-label="Fermer">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
      </button>
    </div>
  {% endfor %}

  {% if credentials is empty %}
    {# Empty state #}
    <div class="empty-state">
      <div class="empty-icon">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
      </div>
      <h2>Aucun identifiant à partager</h2>
      <p>Créez d'abord des identifiants pour pouvoir les partager.</p>
      <a href="{{ path('credential_new') }}" class="btn-primary">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
        Ajouter un identifiant
      </a>
    </div>

  {% else %}
    <form method="post" action="{{ path('shared_access_new') }}" class="share-form" id="shareForm">

      {# ─── Page title ─── #}
      <div class="page-title">
        <div class="title-icon">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/></svg>
        </div>
        <div>
          <h1>Partager des identifiants</h1>
          <p>Donnez accès à vos identifiants en toute sécurité</p>
        </div>
      </div>

      {# ─── Two-column layout ─── #}
      <div class="share-layout">

        {# LEFT: Recipient #}
        <div class="panel panel-left">
          <div class="panel-label">
            <span class="step-dot">1</span>
            <span>Destinataire</span>
          </div>

          <div class="recipient-block">
            <label for="email" class="field-label">Email du destinataire</label>
            <div class="input-wrapper">
              <svg class="input-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
              <input type="email" id="email" name="email" required placeholder="exemple@domaine.com" class="field-input" autocomplete="email">
            </div>
            <p class="field-hint">Le destinataire doit avoir un compte MYKEYNEST.</p>
          </div>

          {# Summary card #}
          <div class="summary-card" id="summaryCard">
            <div class="summary-row">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/></svg>
              <span id="summaryText">Aucun identifiant sélectionné</span>
            </div>
            <div class="summary-chips" id="summaryChips"></div>
          </div>

          {# Actions #}
          <div class="panel-actions">
            <a href="{{ path('shared_access_index') }}" class="btn-ghost">Annuler</a>
            <button type="submit" id="shareButton" class="btn-primary" disabled>
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/></svg>
              Partager
            </button>
          </div>
        </div>

        {# RIGHT: Credentials picker #}
        <div class="panel panel-right">
          <div class="panel-label">
            <span class="step-dot">2</span>
            <span>Identifiants à partager</span>
          </div>

          <div class="creds-toolbar">
            <div class="search-box">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
              <input type="text" id="credSearch" placeholder="Rechercher…" class="search-input" autocomplete="off">
            </div>
            <button type="button" id="toggleAll" class="btn-outline-sm">Tout sélectionner</button>
          </div>

          <div class="creds-list" id="credsList">
            {% for credential in credentials %}
              <label
                class="cred-item"
                for="cred-{{ credential.id }}"
                data-name="{{ credential.name|lower }}"
                data-domain="{{ credential.domain|lower }}"
                data-username="{{ credential.username|lower }}"
                data-label="{{ credential.name }}"
              >
                <input
                  type="checkbox"
                  id="cred-{{ credential.id }}"
                  name="credentials[]"
                  value="{{ credential.id }}"
                  class="cred-checkbox sr-only"
                >
                <div class="cred-avatar color-{{ loop.index % 6 }}">{{ credential.name|slice(0,2)|upper }}</div>
                <div class="cred-info">
                  <span class="cred-name">{{ credential.name }}</span>
                  <span class="cred-meta">
                    <span>{{ credential.domain }}</span>
                    <span class="meta-sep">·</span>
                    <span>{{ credential.username }}</span>
                  </span>
                </div>
                <div class="cred-check">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/></svg>
                </div>
              </label>
            {% endfor %}
          </div>

          <div class="no-results" id="noResults" style="display:none;">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
            <p>Aucun résultat</p>
          </div>
        </div>

      </div>
    </form>
  {% endif %}

</div>

<style>
*, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

.share-page {
  font-family: 'DM Sans', sans-serif;
  max-width: 1100px;
  margin: 0 auto;
  padding: 2rem 1.5rem 4rem;
  animation: fadeUp 0.4s ease;
}

@keyframes fadeUp {
  from { opacity: 0; transform: translateY(16px); }
  to   { opacity: 1; transform: translateY(0); }
}

/* ── Back link ── */
.back-link {
  display: inline-flex;
  align-items: center;
  gap: 0.4rem;
  color: var(--color-text-muted);
  text-decoration: none;
  font-size: 0.875rem;
  font-weight: 500;
  margin-bottom: 2rem;
  transition: color 0.15s;
}
.back-link:hover { color: var(--color-primary); }
.back-link svg { width: 18px; height: 18px; }

/* ── Toast ── */
.toast {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.875rem 1.25rem;
  border-radius: 10px;
  margin-bottom: 1.5rem;
  font-size: 0.9375rem;
}
.toast-error {
  background: #fef2f2;
  border: 1px solid #fecaca;
  color: #991b1b;
}
.toast svg { width: 20px; height: 20px; flex-shrink: 0; }
.toast button { margin-left: auto; background: none; border: none; cursor: pointer; color: inherit; opacity: 0.6; display: flex; }
.toast button:hover { opacity: 1; }
.toast button svg { width: 16px; height: 16px; }

/* ── Empty state ── */
.empty-state {
  text-align: center;
  padding: 5rem 2rem;
  background: white;
  border-radius: 16px;
  border: 1px solid var(--color-border);
}
.empty-icon {
  width: 72px; height: 72px;
  background: linear-gradient(135deg, #f0fdf4, #ecfdf5);
  border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  margin: 0 auto 1.5rem;
}
.empty-icon svg { width: 36px; height: 36px; color: var(--color-primary); }
.empty-state h2 { font-size: 1.375rem; color: var(--color-text-dark); margin-bottom: 0.5rem; }
.empty-state p  { color: var(--color-text-muted); margin-bottom: 2rem; }

/* ── Page title ── */
.page-title {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 2rem;
}
.title-icon {
  width: 48px; height: 48px;
  background: linear-gradient(135deg, #059669, #047857);
  border-radius: 12px;
  display: flex; align-items: center; justify-content: center;
  box-shadow: 0 4px 12px rgba(5,150,105,0.3);
  flex-shrink: 0;
}
.title-icon svg { width: 24px; height: 24px; color: white; }
.page-title h1 {
  font-size: 1.625rem;
  font-weight: 700;
  color: var(--color-text-dark);
  letter-spacing: -0.3px;
  line-height: 1.2;
}
.page-title p { color: var(--color-text-muted); font-size: 0.9375rem; margin-top: 2px; }

/* ── Layout ── */
.share-layout {
  display: grid;
  grid-template-columns: 360px 1fr;
  gap: 1.5rem;
  align-items: start;
}

/* ── Panels ── */
.panel {
  background: white;
  border: 1px solid var(--color-border);
  border-radius: 16px;
  overflow: hidden;
}
.panel-label {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1.25rem 1.5rem;
  background: linear-gradient(135deg, #f0fdf4, #ecfdf5);
  border-bottom: 1px solid var(--color-border);
  font-weight: 600;
  color: var(--color-text-dark);
  font-size: 0.9375rem;
}
.step-dot {
  width: 26px; height: 26px;
  background: var(--color-primary);
  color: white;
  border-radius: 50%;
  font-size: 0.8125rem;
  font-weight: 700;
  display: flex; align-items: center; justify-content: center;
  flex-shrink: 0;
}

/* ── Recipient ── */
.recipient-block { padding: 1.5rem; border-bottom: 1px solid var(--color-border); }
.field-label {
  display: block;
  font-size: 0.8125rem;
  font-weight: 600;
  color: var(--color-text-dark);
  margin-bottom: 0.5rem;
  text-transform: uppercase;
  letter-spacing: 0.04em;
}
.input-wrapper { position: relative; }
.input-icon {
  position: absolute; left: 0.875rem; top: 50%; transform: translateY(-50%);
  width: 18px; height: 18px; color: var(--color-text-muted); pointer-events: none;
}
.field-input {
  width: 100%;
  padding: 0.75rem 0.875rem 0.75rem 2.5rem;
  border: 1.5px solid var(--color-border);
  border-radius: 10px;
  font-size: 0.9375rem;
  font-family: inherit;
  color: var(--color-text-dark);
  transition: border-color 0.15s, box-shadow 0.15s;
}
.field-input:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px rgba(5,150,105,0.15);
}
.field-input::placeholder { color: var(--color-text-light); }
.field-hint { font-size: 0.8125rem; color: var(--color-text-muted); margin-top: 0.5rem; }

/* ── Summary card ── */
.summary-card {
  padding: 1.25rem 1.5rem;
  border-bottom: 1px solid var(--color-border);
  min-height: 80px;
}
.summary-row {
  display: flex;
  align-items: center;
  gap: 0.625rem;
  color: var(--color-text-muted);
  font-size: 0.875rem;
  font-weight: 500;
}
.summary-row svg { width: 18px; height: 18px; color: var(--color-primary); flex-shrink: 0; }
.summary-chips {
  display: flex;
  flex-wrap: wrap;
  gap: 0.375rem;
  margin-top: 0.75rem;
}
.chip {
  display: inline-flex;
  align-items: center;
  gap: 0.3rem;
  padding: 0.25rem 0.625rem;
  background: rgba(5,150,105,0.08);
  border: 1px solid rgba(5,150,105,0.2);
  color: #047857;
  border-radius: 100px;
  font-size: 0.75rem;
  font-weight: 600;
  animation: chipIn 0.2s ease;
}
@keyframes chipIn {
  from { opacity: 0; transform: scale(0.85); }
  to   { opacity: 1; transform: scale(1); }
}

/* ── Panel actions ── */
.panel-actions {
  display: flex;
  gap: 0.75rem;
  padding: 1.25rem 1.5rem;
}
.btn-primary {
  flex: 1;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.75rem 1.25rem;
  background: var(--color-primary);
  color: white;
  border: none;
  border-radius: 10px;
  font-size: 0.9375rem;
  font-weight: 600;
  font-family: inherit;
  cursor: pointer;
  text-decoration: none;
  transition: background 0.2s, box-shadow 0.2s, transform 0.15s;
}
.btn-primary:not(:disabled):hover {
  background: #047857;
  box-shadow: 0 4px 16px rgba(5,150,105,0.35);
  transform: translateY(-1px);
}
.btn-primary:disabled {
  background: var(--color-text-light);
  cursor: not-allowed;
  opacity: 0.55;
}
.btn-primary svg { width: 18px; height: 18px; }
.btn-ghost {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.75rem 1rem;
  background: transparent;
  color: var(--color-text-muted);
  border: 1.5px solid var(--color-border);
  border-radius: 10px;
  font-size: 0.9375rem;
  font-weight: 500;
  font-family: inherit;
  text-decoration: none;
  cursor: pointer;
  transition: all 0.15s;
}
.btn-ghost:hover { border-color: var(--color-text-muted); color: var(--color-text-dark); }

/* ── Right panel: credentials ── */
.panel-right { display: flex; flex-direction: column; }
.creds-toolbar {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1rem 1.5rem;
  border-bottom: 1px solid var(--color-border);
}
.search-box {
  position: relative;
  flex: 1;
}
.search-box svg {
  position: absolute; left: 0.75rem; top: 50%; transform: translateY(-50%);
  width: 16px; height: 16px; color: var(--color-text-muted); pointer-events: none;
}
.search-input {
  width: 100%;
  padding: 0.625rem 0.875rem 0.625rem 2.25rem;
  border: 1.5px solid var(--color-border);
  border-radius: 8px;
  font-size: 0.875rem;
  font-family: inherit;
  color: var(--color-text-dark);
  background: var(--color-bg-light);
  transition: border-color 0.15s, background 0.15s;
}
.search-input:focus {
  outline: none;
  border-color: var(--color-primary);
  background: white;
  box-shadow: 0 0 0 3px rgba(5,150,105,0.12);
}
.search-input::placeholder { color: var(--color-text-light); }
.btn-outline-sm {
  white-space: nowrap;
  padding: 0.5rem 0.875rem;
  font-size: 0.8125rem;
  font-weight: 600;
  font-family: inherit;
  color: var(--color-primary);
  border: 1.5px solid var(--color-primary);
  background: transparent;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.15s;
}
.btn-outline-sm:hover { background: var(--color-primary); color: white; }

/* ── Credentials list ── */
.creds-list {
  padding: 0.75rem;
  display: flex;
  flex-direction: column;
  gap: 0.375rem;
  max-height: 480px;
  overflow-y: auto;
}
.creds-list::-webkit-scrollbar { width: 5px; }
.creds-list::-webkit-scrollbar-track { background: transparent; }
.creds-list::-webkit-scrollbar-thumb { background: var(--color-border); border-radius: 100px; }

.sr-only { position: absolute; width: 1px; height: 1px; overflow: hidden; clip: rect(0,0,0,0); }

.cred-item {
  display: flex;
  align-items: center;
  gap: 0.875rem;
  padding: 0.875rem 1rem;
  border: 1.5px solid transparent;
  border-radius: 10px;
  cursor: pointer;
  transition: border-color 0.15s, background 0.15s, transform 0.1s;
  position: relative;
}
.cred-item:hover { background: var(--color-bg-light); }
.cred-item:hover .cred-check { border-color: var(--color-primary); }

/* Selected state */
.cred-item:has(.cred-checkbox:checked) {
  background: linear-gradient(135deg, #f0fdf4, #ecfdf5);
  border-color: rgba(5,150,105,0.4);
}
.cred-item:has(.cred-checkbox:checked) .cred-check {
  background: var(--color-primary);
  border-color: var(--color-primary);
}
.cred-item:has(.cred-checkbox:checked) .cred-check svg {
  opacity: 1;
  transform: scale(1);
}

.cred-avatar {
  width: 40px; height: 40px;
  border-radius: 10px;
  display: flex; align-items: center; justify-content: center;
  font-family: 'DM Mono', monospace;
  font-weight: 500;
  font-size: 0.8125rem;
  color: white;
  flex-shrink: 0;
  letter-spacing: 0.02em;
}
.cred-avatar.color-0 { background: linear-gradient(135deg, #059669, #047857); }
.cred-avatar.color-1 { background: linear-gradient(135deg, #3b82f6, #2563eb); }
.cred-avatar.color-2 { background: linear-gradient(135deg, #8b5cf6, #7c3aed); }
.cred-avatar.color-3 { background: linear-gradient(135deg, #ec4899, #db2777); }
.cred-avatar.color-4 { background: linear-gradient(135deg, #f59e0b, #d97706); }
.cred-avatar.color-5 { background: linear-gradient(135deg, #14b8a6, #0d9488); }

.cred-info { flex: 1; min-width: 0; }
.cred-name {
  display: block;
  font-size: 0.9375rem;
  font-weight: 600;
  color: var(--color-text-dark);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.cred-meta {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  font-size: 0.8125rem;
  color: var(--color-text-muted);
  margin-top: 2px;
  font-family: 'DM Mono', monospace;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.meta-sep { color: var(--color-text-light); }

.cred-check {
  width: 22px; height: 22px;
  border: 2px solid var(--color-border);
  border-radius: 6px;
  display: flex; align-items: center; justify-content: center;
  flex-shrink: 0;
  transition: all 0.2s;
}
.cred-check svg {
  width: 14px; height: 14px;
  color: white;
  opacity: 0;
  transform: scale(0.5);
  transition: all 0.2s;
}

/* ── No results ── */
.no-results {
  text-align: center;
  padding: 3rem 1rem;
  color: var(--color-text-muted);
}
.no-results svg { width: 36px; height: 36px; margin: 0 auto 0.75rem; display: block; color: var(--color-text-light); }
.no-results p { font-size: 0.9375rem; }

/* ── Responsive ── */
@media (max-width: 768px) {
  .share-layout { grid-template-columns: 1fr; }
  .panel-left { order: 2; }
  .panel-right { order: 1; }
  .creds-list { max-height: 340px; }
  .page-title h1 { font-size: 1.375rem; }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const checkboxes   = document.querySelectorAll('.cred-checkbox');
  const shareBtn     = document.getElementById('shareButton');
  const summaryText  = document.getElementById('summaryText');
  const summaryChips = document.getElementById('summaryChips');
  const searchInput  = document.getElementById('credSearch');
  const toggleAllBtn = document.getElementById('toggleAll');
  const noResults    = document.getElementById('noResults');
  const items        = document.querySelectorAll('.cred-item');

  function updateSummary() {
    const checked = [...checkboxes].filter(cb => cb.checked);
    const n = checked.length;

    shareBtn.disabled = n === 0;

    summaryText.textContent = n === 0
      ? 'Aucun identifiant sélectionné'
      : n === 1 ? '1 identifiant sélectionné'
      : `${n} identifiants sélectionnés`;

    summaryChips.innerHTML = '';
    checked.forEach(cb => {
      const label = cb.closest('.cred-item').dataset.label;
      const chip = document.createElement('span');
      chip.className = 'chip';
      chip.textContent = label;
      summaryChips.appendChild(chip);
    });
  }

  checkboxes.forEach(cb => cb.addEventListener('change', updateSummary));

  // Search
  searchInput.addEventListener('input', () => {
    const q = searchInput.value.toLowerCase().trim();
    let visible = 0;
    items.forEach(item => {
      const match = !q
        || item.dataset.name.includes(q)
        || item.dataset.domain.includes(q)
        || item.dataset.username.includes(q);
      item.style.display = match ? '' : 'none';
      if (match) visible++;
    });
    noResults.style.display = visible === 0 ? 'block' : 'none';
  });

  // Toggle all
  toggleAllBtn.addEventListener('click', () => {
    const visible = [...checkboxes].filter(cb => cb.closest('.cred-item').style.display !== 'none');
    const allChecked = visible.every(cb => cb.checked);
    visible.forEach(cb => cb.checked = !allChecked);
