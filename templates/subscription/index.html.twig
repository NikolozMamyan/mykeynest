          <span class="tool-badge free">{{ 'subscription.tools.security_checker.badge'|trans }}</span>
        </div>
        <p class="tool-description">{{ 'subscription.tools.security_checker.desc'|trans }}</p>
      </div>

      <div class="tool-card">
        <div class="tool-header">
          <div class="tool-icon-text">
            <div class="tool-icon"><i class="fa-solid fa-users-gear"></i></div>
            <div class="tool-title">{{ 'subscription.tools.team_management.title'|trans }}</div>
          </div>
        </div>
        <p class="tool-description">{{ 'subscription.tools.team_management.desc'|trans }}</p>
      </div>
    </div>
