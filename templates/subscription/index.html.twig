{% extends 'base.html.twig' %}
{% block title %}{{ 'subscription.page_title'|trans }}{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    /* ===== ANIMATIONS AVANCÉES ===== */
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-20px); }
    }

    @keyframes slideInLeft {
      from { opacity: 0; transform: translateX(-50px); }
      to { opacity: 1; transform: translateX(0); }
    }

    @keyframes slideInRight {
      from { opacity: 0; transform: translateX(50px); }
      to { opacity: 1; transform: translateX(0); }
    }

    @keyframes pulse-glow {
      0%, 100% { box-shadow: 0 0 20px rgba(5, 150, 105, 0.3); }
      50% { box-shadow: 0 0 40px rgba(5, 150, 105, 0.6); }
    }

    /* ===== HERO SECTION CRÉATIVE ===== */
    .pricing-hero {
      position: relative;
      text-align: center;
      padding: 80px 20px 60px;
      overflow: hidden;
      margin-bottom: 40px;
    }

    .pricing-hero::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 300px;
      background: linear-gradient(135deg, rgba(5, 150, 105, 0.05) 0%, rgba(16, 185, 129, 0.05) 100%);
      clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%);
      z-index: -1;
    }

    .hero-badge {
      display: inline-block;
      background: linear-gradient(135deg, var(--color-primary) 0%, #10b981 100%);
      color: var(--color-white);
      padding: 8px 24px;
      border-radius: 50px;
      font-size: 0.85rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 20px;
      animation: slideInLeft 0.8s ease;
      box-shadow: 0 4px 15px rgba(5, 150, 105, 0.3);
    }

    .pricing-hero h1 {
      font-size: 3.5rem;
      font-weight: 900;
      color: var(--color-text-dark);
      margin-bottom: 20px;
      line-height: 1.2;
      animation: slideInRight 0.8s ease;
    }

    .pricing-hero h1 .highlight {
      background: linear-gradient(135deg, var(--color-primary) 0%, #10b981 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      position: relative;
    }

    .pricing-hero h1 .highlight::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, var(--color-primary) 0%, #10b981 100%);
      border-radius: 2px;
    }

    .pricing-hero p {
      font-size: 1.3rem;
      color: var(--color-text-medium);
      max-width: 700px;
      margin: 0 auto 30px;
      line-height: 1.6;
      animation: slideInLeft 1s ease;
    }

    .stats-row {
      display: flex;
      justify-content: center;
      gap: 50px;
      margin-top: 40px;
      flex-wrap: wrap;
      animation: slideInRight 1.2s ease;
    }

    .stat-item { text-align: center; }

    .stat-number {
      font-size: 2.5rem;
      font-weight: 900;
      background: linear-gradient(135deg, var(--color-primary) 0%, #10b981 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      display: block;
    }

    .stat-label {
      color: var(--color-text-muted);
      font-size: 0.9rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    /* ===== CARTES PRICING AMÉLIORÉES ===== */
    .pricing-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 20px;
    }

    .pricing-cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
      gap: 40px;
      margin-bottom: 100px;
      perspective: 1000px;
    }

    .pricing-card {
      background: var(--color-white);
      border-radius: 24px;
      padding: 0;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
      border: 3px solid transparent;
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
      animation: slideInLeft 0.8s ease;
    }

    .pricing-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 100%;
      background: linear-gradient(135deg, rgba(5, 150, 105, 0.03) 0%, rgba(16, 185, 129, 0.03) 100%);
      opacity: 0;
      transition: opacity 0.5s ease;
    }

    .pricing-card:hover {
      transform: translateY(-15px) scale(1.02);
      box-shadow: 0 25px 60px rgba(5, 150, 105, 0.15);
      border-color: var(--color-primary);
    }

    .pricing-card:hover::before { opacity: 1; }

    .pricing-card.featured {
      border-color: var(--color-primary);
      transform: scale(1.05);
      animation: pulse-glow 3s infinite;
    }

    .pricing-card.featured::after {
      content: '';
      position: absolute;
      top: 0; left: 0; right: 0;
      height: 6px;
      background: linear-gradient(90deg, var(--color-primary) 0%, #10b981 100%);
    }

    .card-popular-badge {
      position: absolute;
      top: 30px;
      right: -35px;
      background: linear-gradient(135deg, var(--color-primary) 0%, #10b981 100%);
      color: var(--color-white);
      padding: 8px 45px;
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      transform: rotate(45deg);
      box-shadow: 0 4px 12px rgba(5, 150, 105, 0.4);
      letter-spacing: 1px;
      z-index: 10;
    }

    .card-header {
      text-align: center;
      padding: 50px 40px 30px;
      position: relative;
    }

    .card-icon-wrapper {
      width: 90px;
      height: 90px;
      margin: 0 auto 25px;
      position: relative;
    }

    .card-icon-bg {
      position: absolute;
      inset: 0;
      background: linear-gradient(135deg, rgba(5, 150, 105, 0.1) 0%, rgba(16, 185, 129, 0.1) 100%);
      border-radius: 50%;
      animation: float 3s ease-in-out infinite;
    }

    .card-icon {
      position: relative;
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 3rem;
      z-index: 1;
    }

    .plan-name {
      font-size: 1.8rem;
      font-weight: 800;
      color: var(--color-text-dark);
      margin-bottom: 15px;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .plan-price-wrapper { margin-bottom: 10px; }

    .plan-price {
      font-size: 4rem;
      font-weight: 900;
      background: linear-gradient(135deg, var(--color-primary) 0%, #10b981 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      line-height: 1;
      display: inline-block;
    }

    .plan-description {
      color: var(--color-text-medium);
      font-size: 1rem;
      margin-bottom: 30px;
      line-height: 1.6;
    }

    .card-divider {
      height: 2px;
      background: linear-gradient(90deg, transparent 0%, var(--color-border) 50%, transparent 100%);
      margin: 0 30px 30px;
    }

    .card-body { padding: 0 40px 40px; }

    .features-list {
      list-style: none;
      margin-bottom: 35px;
      padding-left: 0;
    }

    .features-list li {
      padding: 16px 0;
      color: var(--color-text-medium);
      display: flex;
      align-items: flex-start;
      gap: 15px;
      font-size: 1rem;
      line-height: 1.5;
      border-bottom: 1px solid var(--color-bg-light);
    }

    .features-list li:last-child { border-bottom: none; }

    .feature-icon {
      flex-shrink: 0;
      width: 28px;
      height: 28px;
      background: linear-gradient(135deg, var(--color-primary) 0%, #10b981 100%);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--color-white);
      font-weight: 900;
      font-size: 0.85rem;
    }

    .cta-button {
      width: 100%;
      padding: 18px 36px;
      background: linear-gradient(135deg, var(--color-primary) 0%, #10b981 100%);
      color: var(--color-white);
      border: none;
      border-radius: 14px;
      font-size: 1.05rem;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      text-transform: uppercase;
      letter-spacing: 1px;
      display: inline-block;
      text-align: center;
      text-decoration: none;
    }

    .cta-button.outline {
      background: transparent;
      color: var(--color-primary);
      border: 3px solid var(--color-primary);
      box-shadow: none;
    }

    /* ===== SECTION COMPARAISON ===== */
    .comparison-section {
      background: var(--color-white);
      border-radius: 24px;
      padding: 70px 50px;
      margin-bottom: 100px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.05);
      animation: slideInRight 1s ease;
    }

    .comparison-section h2 {
      text-align: center;
      font-size: 2.8rem;
      font-weight: 800;
      color: var(--color-text-dark);
      margin-bottom: 20px;
    }

    .comparison-subtitle {
      text-align: center;
      color: var(--color-text-medium);
      font-size: 1.1rem;
      margin-bottom: 60px;
    }

    .tools-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 35px;
    }

    .tool-card {
      background: var(--color-bg-light);
      padding: 40px 30px;
      border-radius: 20px;
      border: 2px solid var(--color-border);
    }

    .tool-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 20px;
    }

    .tool-icon-text {
      display: flex;
      align-items: center;
      gap: 15px;
    }

    .tool-icon { font-size: 2.5rem; }
    .tool-title { font-size: 1.3rem; font-weight: 700; color: var(--color-text-dark); }
    .tool-description { color: var(--color-text-medium); line-height: 1.7; font-size: 0.98rem; }

    /* ===== CONTACT ===== */
    .contact-section {
      position: relative;
      background: linear-gradient(135deg, var(--color-primary) 0%, #10b981 100%);
      border-radius: 24px;
      padding: 80px 60px;
      color: var(--color-white);
      margin-bottom: 100px;
      overflow: hidden;
    }

    .contact-content { position: relative; z-index: 1; }
    .contact-header { text-align: center; margin-bottom: 50px; }
    .contact-section h2 { font-size: 3rem; font-weight: 900; margin-bottom: 15px; }
    .contact-section .subtitle { font-size: 1.2rem; opacity: 0.95; font-weight: 500; }
    .contact-form { max-width: 800px; margin: 0 auto; display: grid; gap: 25px; }
    .form-row { display: grid; grid-template-columns: 1fr 1fr; gap: 25px; }
    .form-group { display: flex; flex-direction: column; }
    .form-group label { margin-bottom: 10px; font-weight: 700; font-size: 0.95rem; text-transform: uppercase; letter-spacing: 0.5px; }
    .form-group input, .form-group select, .form-group textarea {
      padding: 16px 20px;
      border: 3px solid rgba(255, 255, 255, 0.2);
      border-radius: 12px;
      font-size: 1rem;
      background: rgba(255, 255, 255, 0.95);
      color: var(--color-text-dark);
      font-family: inherit;
    }

    .submit-button {
      padding: 20px 40px;
      background: var(--color-white);
      color: var(--color-primary);
      border: none;
      border-radius: 14px;
      font-size: 1.1rem;
      font-weight: 800;
      cursor: pointer;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-top: 15px;
    }

    /* ===== FAQ ===== */
    .faq-section {
      max-width: 1000px;
      margin: 0 auto 100px;
    }

    .faq-header { text-align: center; margin-bottom: 60px; }

    .faq-section h2 {
      font-size: 3rem;
      font-weight: 800;
      color: var(--color-text-dark);
      margin-bottom: 15px;
    }

    .faq-subtitle { color: var(--color-text-medium); font-size: 1.1rem; }

    .faq-item {
      background: var(--color-white);
      border-radius: 16px;
      margin-bottom: 20px;
      overflow: hidden;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.06);
      border: 2px solid var(--color-border);
    }

    .faq-question {
      padding: 28px 35px;
      cursor: pointer;
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-weight: 700;
      font-size: 1.15rem;
      color: var(--color-text-dark);
      user-select: none;
      gap: 20px;
    }

    .faq-icon {
      flex-shrink: 0;
      width: 36px;
      height: 36px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, var(--color-primary) 0%, #10b981 100%);
      color: var(--color-white);
      border-radius: 50%;
      font-size: 1.5rem;
      font-weight: 700;
      transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .faq-item.active .faq-icon { transform: rotate(135deg); }

    .faq-answer {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.5s cubic-bezier(0.4, 0, 0.2, 1), padding 0.5s ease;
      padding: 0 35px;
      color: var(--color-text-medium);
      line-height: 1.9;
      font-size: 1.02rem;
    }

    .faq-item.active .faq-answer {
      max-height: 600px;
      padding: 0 35px 30px;
    }

    /* ===== TRUST ===== */
    .trust-section {
      text-align: center;
      padding: 80px 20px;
      background: var(--color-bg-light);
      border-radius: 24px;
      margin-bottom: 80px;
    }

    .trust-section h3 {
      font-size: 1.2rem;
      color: var(--color-text-muted);
      text-transform: uppercase;
      letter-spacing: 2px;
      margin-bottom: 40px;
      font-weight: 700;
    }

    .trust-badges {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 60px;
      flex-wrap: wrap;
    }

    .trust-badge {
      display: flex;
      align-items: center;
      gap: 15px;
      color: var(--color-text-dark);
      font-weight: 700;
      font-size: 1.1rem;
    }

    .trust-icon { font-size: 2.5rem; }

    @media (max-width: 768px) {
      .pricing-hero h1 { font-size: 2.5rem; }
      .pricing-hero p { font-size: 1.1rem; }
      .pricing-cards { grid-template-columns: 1fr; gap: 30px; }
      .pricing-card.featured { transform: scale(1); }
      .form-row { grid-template-columns: 1fr; }
      .contact-section, .comparison-section { padding: 50px 30px; }
      .tools-grid { grid-template-columns: 1fr; }
      .faq-section h2, .contact-section h2 { font-size: 2rem; }
    }
  </style>
{% endblock %}

