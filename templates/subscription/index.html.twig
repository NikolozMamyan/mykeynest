  <!-- ===== CONTACT ===== -->
  <section class="contact-section">
    <div class="contact-content">
      <div class="contact-header">
        <h2><i class="fa-solid fa-envelope-open-text"></i> {{ 'subscription.contact.title'|trans }}</h2>
        <p class="subtitle">{{ 'subscription.contact.subtitle'|trans }}</p>
      </div>

      <form class="contact-form">
        <div class="form-row">
          <div class="form-group">
            <label><i class="fa-solid fa-user"></i> {{ 'subscription.contact.full_name'|trans }}</label>
            <input type="text" placeholder="John Doe" required>
          </div>
          <div class="form-group">
            <label><i class="fa-solid fa-envelope"></i> {{ 'subscription.contact.email'|trans }}</label>
            <input type="email" placeholder="exemple@email.com" required>
          </div>
        </div>

        <div class="form-group">
          <label><i class="fa-solid fa-tag"></i> {{ 'subscription.contact.subject'|trans }}</label>
          <select>
            <option>{{ 'subscription.contact.subject_demo'|trans }}</option>
            <option>{{ 'subscription.contact.subject_support'|trans }}</option>
            <option>{{ 'subscription.contact.subject_other'|trans }}</option>
          </select>
        </div>

        <div class="form-group">
          <label><i class="fa-solid fa-message"></i> {{ 'subscription.contact.message'|trans }}</label>
          <textarea placeholder="{{ 'subscription.contact.message_placeholder'|trans }}"></textarea>
        </div>

        <button type="submit" class="submit-button">
          <i class="fa-solid fa-paper-plane"></i> {{ 'subscription.contact.submit'|trans }}
        </button>
      </form>
    </div>
  </section>

  <!-- ===== FAQ ===== -->
  <section class="faq-section">
    <div class="faq-header">
      <h2>
        <i class="fa-solid fa-circle-question"></i>
        {{ 'subscription.faq.title_before'|trans }}
        <span class="highlight">{{ 'subscription.faq.title_highlight'|trans }}</span>
      </h2>
      <p class="faq-subtitle">{{ 'subscription.faq.subtitle'|trans }}</p>
    </div>

    <div class="faq-item">
      <div class="faq-question">
        <span>{{ 'subscription.faq.q1'|trans }}</span>
        <div class="faq-icon"><i class="fa-solid fa-plus"></i></div>
      </div>
      <div class="faq-answer">{{ 'subscription.faq.a1'|trans }}</div>
    </div>

    <div class="faq-item">
      <div class="faq-question">
        <span>{{ 'subscription.faq.q2'|trans }}</span>
        <div class="faq-icon"><i class="fa-solid fa-plus"></i></div>
      </div>
      <div class="faq-answer">{{ 'subscription.faq.a2'|trans }}</div>
    </div>

    <div class="faq-item">
      <div class="faq-question">
        <span>{{ 'subscription.faq.q3'|trans }}</span>
        <div class="faq-icon"><i class="fa-solid fa-plus"></i></div>
      </div>
      <div class="faq-answer">{{ 'subscription.faq.a3'|trans }}</div>
    </div>
  </section>

  <!-- ===== TRUST SECTION ===== -->
  <section class="trust-section">
    <h3>{{ 'subscription.trust.title'|trans }}</h3>
    <div class="trust-badges">
      <div class="trust-badge"><span class="trust-icon"><i class="fa-solid fa-briefcase"></i></span> {{ 'subscription.trust.companies'|trans }}</div>
      <div class="trust-badge"><span class="trust-icon"><i class="fa-solid fa-laptop-code"></i></span> {{ 'subscription.trust.startups'|trans }}</div>
      <div class="trust-badge"><span class="trust-icon"><i class="fa-solid fa-graduation-cap"></i></span> {{ 'subscription.trust.universities'|trans }}</div>
    </div>
  </section>

  <script>
    document.querySelectorAll('.faq-question').forEach(q => {
      q.addEventListener('click', () => {
        const item = q.closest('.faq-item');
        item.classList.toggle('active');
      });
    });
  </script>
