{{ form_start(form, {'attr': {'class': 'team-form'}}) }}

    <div class="form-group">
        {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.name, {
            'attr': {
                'class': 'form-input',
                'placeholder': 'teams.new.form.name_placeholder'|trans
            }
        }) }}
        {{ form_errors(form.name) }}
    </div>

    {% if form.credentials is defined %}
        <div class="form-group">
            {{ form_label(form.credentials, null, {'label_attr': {'class': 'form-label'}}) }}

            <div class="form-help-text">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                {{ 'teams.new.form.credentials_help'|trans }}
            </div>

            <div class="credentials-list">
                {{ form_widget(form.credentials) }}
            </div>
            {{ form_errors(form.credentials) }}
        </div>
    {% endif %}

    <div class="form-actions">
        <button class="btn-submit" type="submit">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            {{ button_label|default('teams.new.form.submit_create_team'|trans) }}
        </button>
    </div>

{{ form_end(form) }}

<style>
.team-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.form-label {
    font-weight: 600;
    color: var(--color-text-dark);
    font-size: 0.9375rem;
    margin-bottom: 0.25rem;
}

.form-input {
    padding: 0.875rem 1rem;
    border: 1.5px solid var(--color-border);
    border-radius: var(--border-radius-sm);
    font-size: 1rem;
    color: var(--color-text-dark);
    transition: all 0.2s ease;
    background: white;
}

.form-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px var(--color-primary-hover);
}

.form-input::placeholder {
    color: var(--color-text-light);
}

.form-help-text {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: var(--color-bg-light);
    border-radius: var(--border-radius-sm);
    color: var(--color-text-medium);
    font-size: 0.875rem;
    line-height: 1.5;
}

.form-help-text svg {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
    margin-top: 0.125rem;
    color: var(--color-primary);
}

.credentials-list {
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
    padding: 1rem;
    background: var(--color-bg-light);
    border-radius: var(--border-radius-sm);
}

.credentials-list > div {
    display: flex;
    gap: 0.5rem;
}

.credentials-list input[type="checkbox"] {
    width: 18px;
    height: 18px;
    cursor: pointer;
    accent-color: var(--color-primary);
    margin-top: 0.125rem;
}

.credentials-list label {
    cursor: pointer;
    color: var(--color-text-dark);
    font-size: 0.9375rem;
    user-select: none;
    flex: 1;
}

.credentials-list label:hover {
    color: var(--color-primary);
}

.form-actions {
    margin-top: 0.5rem;
}

.btn-submit {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.625rem;
    width: 100%;
    padding: 0.9375rem 1.5rem;
    background: var(--color-primary);
    color: white;
    border: none;
    border-radius: var(--border-radius-sm);
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: var(--shadow-green);
}

.btn-submit:hover {
    background: #047857;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(5, 150, 105, 0.4);
}

.btn-submit:active {
    transform: translateY(0);
}

.btn-submit svg {
    width: 20px;
    height: 20px;
}

/* Form Errors */
.form-group .invalid-feedback {
    color: var(--color-danger-start);
    font-size: 0.875rem;
    margin-top: 0.25rem;
}
</style>