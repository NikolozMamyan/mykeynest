{% extends 'base.html.twig' %}

{% block title %}{{ 'teams.new.page_title'|trans }}{% endblock %}

{% block body %}
<div class="form-container">
    <div class="form-header">
        <a href="{{ path('app_team_index') }}" class="btn-back">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            {{ 'teams.new.back'|trans }}
        </a>
    </div>

    <div class="form-card">
        <div class="form-card-header">
            <div class="form-icon">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
            </div>

            <h1>{{ 'teams.new.header.title'|trans }}</h1>
            <p>{{ 'teams.new.header.subtitle'|trans }}</p>
        </div>

        <div class="form-card-body">
            {% include 'team/_form.html.twig' with {
                'form': form,
                'button_label': 'teams.new.form.submit_create_team'|trans
            } %}
        </div>
    </div>
</div>

<style>
.form-container {
    max-width: 700px;
    margin: 0 auto;
    padding: 2rem;
}

.form-header {
    margin-bottom: 1.5rem;
}

.btn-back {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-medium);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
}

.btn-back:hover {
    color: var(--color-primary);
    gap: 0.375rem;
}

.btn-back svg {
    width: 20px;
    height: 20px;
}

.form-card {
    background: white;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-md);
    overflow: hidden;
}

.form-card-header {
    padding: 2.5rem 2.5rem 2rem;
    background: var(--background-gradient);
    text-align: center;
}

.form-icon {
    display: inline-flex;
    padding: 1rem;
    background: white;
    border-radius: 50%;
    margin-bottom: 1rem;
    box-shadow: var(--shadow-sm);
}

.form-icon svg {
    width: 32px;
    height: 32px;
    color: var(--color-primary);
}

.form-card-header h1 {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin: 0 0 0.5rem 0;
}

.form-card-header p {
    color: var(--color-text-medium);
    margin: 0;
}

.form-card-body {
    padding: 2.5rem;
}

@media (max-width: 768px) {
    .form-container {
        padding: 1rem;
    }
    
    .form-card-header,
    .form-card-body {
        padding: 1.5rem;
    }
}
</style>
{% endblock %}